<% layout("/layouts/boilerplate", {
    title: 'Contact Us - Zoopito',
    description: 'Get in touch with Zoopito for livestock management solutions, support, partnerships, and inquiries.',
    pageStyles: `
        .contact-gradient {
            background: linear-gradient(135deg, rgba(56, 189, 248, 0.08) 0%, rgba(34, 197, 94, 0.08) 100%);
        }
        
        .contact-card {
            transition: all 0.3s ease;
            border: 1px solid #e5e7eb;
        }
        
        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border-color: #38BDF8;
        }
        
        .map-container {
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        
        .faq-item {
            border-bottom: 1px solid #e5e7eb;
            transition: all 0.3s ease;
        }
        
        .faq-item:hover {
            background: linear-gradient(90deg, rgba(56, 189, 248, 0.05), transparent);
        }
        
        .department-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
            margin: 0.25rem;
        }
        
        .chat-bubble {
            max-width: 280px;
            border-radius: 18px;
            padding: 1rem;
            position: relative;
            animation: fadeInUp 0.5s ease;
        }
        
        .chat-bubble::after {
            content: '';
            position: absolute;
            bottom: -8px;
            width: 0;
            height: 0;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
        }
        
        .chat-bubble.user {
            background: linear-gradient(135deg, #38BDF8, #0ea5e9);
            color: white;
            margin-left: auto;
            border-bottom-right-radius: 4px;
        }
        
        .chat-bubble.user::after {
            border-top: 10px solid #0ea5e9;
            right: 10px;
        }
        
        .chat-bubble.support {
            background: linear-gradient(135deg, #22C55E, #16a34a);
            color: white;
            border-bottom-left-radius: 4px;
        }
        
        .chat-bubble.support::after {
            border-top: 10px solid #16a34a;
            left: 10px;
        }
        
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .form-input:focus {
            box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.2);
        }
        
        .support-agent {
            position: relative;
            overflow: hidden;
        }
        
        .support-agent::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.7s;
        }
        
        .support-agent:hover::before {
            left: 100%;
        }
    `
}) -%>

