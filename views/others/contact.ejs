<script>
document.addEventListener('DOMContentLoaded', function() {
  const shareLocationCheckbox = document.getElementById('shareLocation');
  const locationFields = document.getElementById('locationFields');
  const latitudeInput = document.querySelector('input[name="latitude"]');
  const longitudeInput = document.querySelector('input[name="longitude"]');
  const locationStatus = document.getElementById('locationStatus');
  const locationError = document.getElementById('locationError');

  // Toggle location fields when checkbox is clicked
  shareLocationCheckbox.addEventListener('change', function() {
    if (this.checked) {
      // Show loading state
      locationStatus.textContent = 'Detecting location...';
      locationStatus.className = 'text-xs text-yellow-600 ml-auto';
      //locationFields.classList.remove('hidden');
      
      // Get user's location
      getLocation();
    } else {
      // Hide location fields and clear values
      locationFields.classList.add('hidden');
      latitudeInput.value = '';
      longitudeInput.value = '';
      locationStatus.textContent = 'Not shared';
      locationStatus.className = 'text-xs text-gray-500 ml-auto';
      locationError.classList.add('hidden');
    }
  });

  function getLocation() {
    if (!navigator.geolocation) {
      showLocationError('Geolocation is not supported by your browser');
      shareLocationCheckbox.checked = false;
      return;
    }

    // Options for geolocation
    const options = {
      enableHighAccuracy: true, // Try to get precise location
      timeout: 10000, // 10 seconds timeout
      maximumAge: 0 // Don't use cached location
    };

    navigator.geolocation.getCurrentPosition(
      // Success callback
      function(position) {
        const lat = position.coords.latitude;
        const lng = position.coords.longitude;
        
        // Update inputs with location data
        latitudeInput.value = lat.toFixed(6);
        longitudeInput.value = lng.toFixed(6);
        
        // Update status
        locationStatus.textContent = 'Location shared âœ“';
        locationStatus.className = 'text-xs text-green-600 ml-auto';
        locationError.classList.add('hidden');
        
        // Optional: Show a small success message
        showTemporaryMessage('Location detected successfully!', 'success');
      },
      // Error callback
      function(error) {
        let errorMessage = 'Unable to retrieve your location. ';
        
        switch(error.code) {
          case error.PERMISSION_DENIED:
            errorMessage += 'Please allow location access in your browser settings.';
            break;
          case error.POSITION_UNAVAILABLE:
            errorMessage += 'Location information is unavailable.';
            break;
          case error.TIMEOUT:
            errorMessage += 'Location request timed out.';
            break;
          default:
            errorMessage += 'An unknown error occurred.';
        }
        
        showLocationError(errorMessage);
        shareLocationCheckbox.checked = false;
        locationFields.classList.add('hidden');
      },
      options
    );
  }

  function showLocationError(message) {
    locationError.textContent = message;
    locationError.classList.remove('hidden');
    locationStatus.textContent = 'Failed to detect';
    locationStatus.className = 'text-xs text-red-600 ml-auto';
  }

  function showTemporaryMessage(message, type) {
    // Create a temporary message element
    const messageDiv = document.createElement('div');
    messageDiv.textContent = message;
    messageDiv.className = `fixed bottom-4 right-4 px-4 py-2 rounded-lg text-sm ${
      type === 'success' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'
    }`;
    
    document.body.appendChild(messageDiv);
    
    // Remove after 3 seconds
    setTimeout(() => {
      messageDiv.remove();
    }, 3000);
  }

  // Add privacy notice
  const privacyNotice = document.createElement('div');
  privacyNotice.className = 'mt-2 text-xs text-gray-500';
  privacyNotice.innerHTML = `
    <p>Your location data will only be used to provide better service and will not be shared with third parties.</p>
  `;
  shareLocationCheckbox.parentNode.appendChild(privacyNotice);
});
</script>

