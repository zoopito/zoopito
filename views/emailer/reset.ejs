<% layout("/layouts/boilerplate") -%>

<div class="min-h-screen flex items-center justify-center
            bg-gradient-to-br from-green-200 via-green-50 to-green-100
            dark:from-gray-900 dark:via-gray-800 dark:to-gray-900
            px-4 transition-all">

  <div class="w-full max-w-md">

    <!-- Card -->
    <div class="bg-white/70 dark:bg-gray-800/60 backdrop-blur-xl
                rounded-2xl shadow-xl p-6 sm:p-8
                border border-white/40 dark:border-gray-700">

      <!-- Brand -->
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold text-green-700 dark:text-green-400">
          Zoopito
        </h1>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Secure Password Reset
        </p>
      </div>

      <!-- Title -->
      <div class="text-center mb-5">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">
          Create New Password
        </h2>

        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
          Choose a strong password to keep your Zoopito account secure.
        </p>
      </div>

      <!-- Form -->
      <form
        action="/reset-password/<%= token %>"
        method="POST"
        class="space-y-5"
        novalidate
      >

        <!-- New Password -->
        <div>
          <label
            for="password"
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
          >
            New Password
          </label>

          <input
            type="password"
            id="password"
            name="password"
            required
            minlength="8"
            placeholder="Enter a strong password"
            class="w-full px-4 py-2.5 rounded-xl border
                   border-gray-300 dark:border-gray-600
                   bg-gray-50 dark:bg-gray-900
                   text-gray-900 dark:text-white
                   focus:ring-2 focus:ring-green-400 focus:border-green-500
                   outline-none transition"
          />

          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            Minimum 8 characters, include letters & numbers.
          </p>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-2.5 bg-green-600 hover:bg-green-700
                 dark:bg-green-500 dark:hover:bg-green-600
                 text-white font-semibold rounded-xl
                 shadow-md transition-all"
        >
          Reset Password
        </button>

      </form>

      <!-- Divider -->
      <div class="my-6 border-t border-gray-300 dark:border-gray-700"></div>

      <!-- Help -->
      <p class="text-center text-sm text-gray-700 dark:text-gray-300">
        Facing issues?
        <a
          href="/contact"
          class="text-green-600 dark:text-green-400 font-semibold hover:underline"
        >
          Contact Zoopito Support
        </a>
      </p>

    </div>

    <!-- Trust Footer -->
    <p class="mt-6 text-center text-xs text-gray-500 dark:text-gray-400">
      Your password is encrypted and securely stored by Zoopito.
    </p>

  </div>
</div>
