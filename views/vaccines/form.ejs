<!-- views/vaccines/form.ejs -->
<% layout("/layouts/boilerplate") -%>

<div class="max-w-6xl mx-auto p-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= title %></h1>
    <a href="/vaccines" class="text-blue-600 dark:text-blue-400 hover:underline">
      ← Back to Vaccines
    </a>
  </div>
  
  <form method="POST" action="<%= isEdit ? `/vaccines/${vaccine._id}?_method=PUT` : '/vaccines' %>" class="space-y-8">
    
    <!-- Basic Information Section -->
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-6 border border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 rounded-lg bg-blue-100 dark:bg-blue-900/30">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Basic Information</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Vaccine Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Vaccine Name *
          </label>
          <input type="text" name="name" value="<%= vaccine ? vaccine.name : '' %>" required
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., FMD Vaccine, HS-BQ Vaccine">
        </div>
        
        <!-- Brand -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Brand *
          </label>
          <input type="text" name="brand" value="<%= vaccine ? vaccine.brand : '' %>" required
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., Zoetis, Merck">
        </div>
        
        <!-- Manufacturer -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Manufacturer
          </label>
          <input type="text" name="manufacturer" value="<%= vaccine ? vaccine.manufacturer : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="Manufacturer company name">
        </div>
        
        <!-- Disease Target -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Disease Target *
          </label>
          <input type="text" name="diseaseTarget" value="<%= vaccine ? vaccine.diseaseTarget : '' %>" required
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., Foot and Mouth Disease, Black Quarter">
        </div>
      </div>
    </div>

    <!-- Classification Section -->
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-6 border border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 rounded-lg bg-green-100 dark:bg-green-900/30">
          <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Classification</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Vaccine Type -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Vaccine Type *
          </label>
          <select name="vaccineType" required 
                  class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors">
            <option value="">Select Type</option>
            <% vaccineTypes.forEach(type => { %>
              <option value="<%= type %>" <%= vaccine && vaccine.vaccineType === type ? 'selected' : '' %>>
                <%= type %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <!-- Category -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Category
          </label>
          <select name="category" 
                  class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors">
            <% categories.forEach(cat => { %>
              <option value="<%= cat %>" <%= vaccine && vaccine.category === cat ? 'selected' : '' %>>
                <%= cat %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <!-- License Number -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            License Number
          </label>
          <input type="text" name="licenseNumber" value="<%= vaccine ? vaccine.licenseNumber : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., IND-2024-VAC-001">
        </div>
      </div>
      
      <!-- Target Species -->
      <div class="mt-6">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">
          Target Species
        </label>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
          <% species.forEach(sp => { %>
            <label class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-xl cursor-pointer transition-colors">
              <input type="checkbox" name="targetSpecies" value="<%= sp %>"
                     <%= vaccine && vaccine.targetSpecies && vaccine.targetSpecies.includes(sp) ? 'checked' : '' %>
                     class="h-5 w-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500 focus:ring-offset-0">
              <span class="ml-3 text-sm text-gray-700 dark:text-gray-300"><%= sp %></span>
            </label>
          <% }) %>
        </div>
      </div>
      
      <!-- Approved Species -->
      <div class="mt-6">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">
          Approved Species (Regulatory)
        </label>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
          <% species.forEach(sp => { %>
            <label class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-xl cursor-pointer transition-colors">
              <input type="checkbox" name="approvedSpecies" value="<%= sp %>"
                     <%= vaccine && vaccine.approvedSpecies && vaccine.approvedSpecies.includes(sp) ? 'checked' : '' %>
                     class="h-5 w-5 text-green-600 rounded border-gray-300 focus:ring-green-500 focus:ring-offset-0">
              <span class="ml-3 text-sm text-gray-700 dark:text-gray-300"><%= sp %></span>
            </label>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- Administration & Dosage Section -->
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-6 border border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 rounded-lg bg-purple-100 dark:bg-purple-900/30">
          <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Administration & Dosage</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Administration Route -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Administration Route *
          </label>
          <select name="administrationRoute" required 
                  class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors">
            <option value="">Select Route</option>
            <% routes.forEach(route => { %>
              <option value="<%= route %>" <%= vaccine && vaccine.administrationRoute === route ? 'selected' : '' %>>
                <%= route %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <!-- Dosage Unit -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Dosage Unit
          </label>
          <select name="dosageUnit" 
                  class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors">
            <% units.forEach(unit => { %>
              <option value="<%= unit %>" <%= vaccine && vaccine.dosageUnit === unit ? 'selected' : '' %>>
                <%= unit %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <!-- Standard Dosage -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Standard Dosage
          </label>
          <input type="number" step="0.01" name="standardDosage" value="<%= vaccine ? vaccine.standardDosage : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., 2.5">
        </div>
      </div>
    </div>

    <!-- Safety & Storage Section -->
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-6 border border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 rounded-lg bg-red-100 dark:bg-red-900/30">
          <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.732 0L4.07 16.5c-.77.833.192 2.5 1.732 2.5z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Safety & Storage</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Contraindications -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Contraindications
          </label>
          <textarea name="contraindications" rows="4"
                    class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                    placeholder="When NOT to use this vaccine"><%= vaccine ? vaccine.contraindications : '' %></textarea>
        </div>
        
        <!-- Side Effects -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Side Effects
          </label>
          <textarea name="sideEffects" rows="4"
                    class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                    placeholder="Possible side effects"><%= vaccine ? vaccine.sideEffects : '' %></textarea>
        </div>
      </div>
      
      <!-- Storage Information -->
      <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Storage Temperature -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Storage Temperature (Min)
          </label>
          <div class="flex items-center">
            <input type="number" name="storageTemperature.min" value="<%= vaccine && vaccine.storageTemperature ? vaccine.storageTemperature.min : '' %>"
                   class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                   placeholder="e.g., 2">
            <span class="ml-2 text-gray-500 dark:text-gray-400">°C</span>
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Storage Temperature (Max)
          </label>
          <div class="flex items-center">
            <input type="number" name="storageTemperature.max" value="<%= vaccine && vaccine.storageTemperature ? vaccine.storageTemperature.max : '' %>"
                   class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                   placeholder="e.g., 8">
            <span class="ml-2 text-gray-500 dark:text-gray-400">°C</span>
          </div>
        </div>
        
        <!-- Shelf Life -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Shelf Life (Months)
          </label>
          <input type="number" name="shelfLifeMonths" value="<%= vaccine ? vaccine.shelfLifeMonths : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., 24">
        </div>
        
        <!-- Withdrawal Period -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Withdrawal Period (Days)
          </label>
          <input type="number" name="withdrawalPeriodDays" value="<%= vaccine ? vaccine.withdrawalPeriodDays : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., 30">
        </div>
      </div>
      
      <!-- Refrigeration Checkbox -->
      <div class="mt-6">
        <label class="flex items-center">
          <input type="checkbox" name="requiresRefrigeration" value="true"
                 <%= vaccine && vaccine.requiresRefrigeration ? 'checked' : '' %>
                 class="h-5 w-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500 focus:ring-offset-0">
          <span class="ml-3 text-sm text-gray-700 dark:text-gray-300">
            Requires Refrigeration
          </span>
        </label>
      </div>
    </div>

    <!-- Timing Information Section -->
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-6 border border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 rounded-lg bg-yellow-100 dark:bg-yellow-900/30">
          <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Timing Information</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Minimum Age -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Minimum Age (Weeks)
          </label>
          <input type="number" name="minimumAgeWeeks" value="<%= vaccine ? vaccine.minimumAgeWeeks : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., 8">
        </div>
        
        <!-- Booster Interval -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Booster Interval (Weeks)
          </label>
          <input type="number" name="boosterIntervalWeeks" value="<%= vaccine ? vaccine.boosterIntervalWeeks : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., 52">
        </div>
        
        <!-- Immunity Duration -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Immunity Duration (Months)
          </label>
          <input type="number" name="immunityDurationMonths" value="<%= vaccine ? vaccine.immunityDurationMonths : '' %>"
                 class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                 placeholder="e.g., 12">
        </div>
      </div>
    </div>

    <!-- Notes Section -->
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-6 border border-gray-100 dark:border-gray-700">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700">
          <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </div>
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Additional Notes</h2>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Notes
        </label>
        <textarea name="notes" rows="4"
                  class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 transition-colors"
                  placeholder="Additional information, special instructions, etc."><%= vaccine ? vaccine.notes : '' %></textarea>
      </div>
      
      <!-- Active Status -->
      <div class="mt-6">
        <label class="flex items-center">
          <input type="checkbox" name="isActive" value="true"
                 <%= vaccine && vaccine.isActive ? 'checked' : '' %>
                 class="h-5 w-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500 focus:ring-offset-0">
          <span class="ml-3 text-sm text-gray-700 dark:text-gray-300">
            Active (Available for use)
          </span>
        </label>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        * Required fields
      </div>
      
      <div class="flex gap-3">
        <a href="/vaccines" 
           class="px-6 py-3 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
          Cancel
        </a>
        
        <button type="submit" 
                class="px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-xl hover:from-blue-700 hover:to-blue-800 shadow-lg shadow-blue-500/25 transition-all transform hover:scale-105">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <%= isEdit ? 'Update Vaccine' : 'Create Vaccine' %>
          </div>
        </button>
      </div>
    </div>
  </form>
</div>

<!-- JavaScript for dynamic form behavior -->
<script>
  // Handle array inputs for checkboxes
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    
    form.addEventListener('submit', function(e) {
      // Convert checkbox groups to arrays
      const targetSpeciesCheckboxes = document.querySelectorAll('input[name="targetSpecies"]:checked');
      const approvedSpeciesCheckboxes = document.querySelectorAll('input[name="approvedSpecies"]:checked');
      
      // Create hidden inputs for arrays
      targetSpeciesCheckboxes.forEach((cb, index) => {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'targetSpecies';
        hiddenInput.value = cb.value;
        form.appendChild(hiddenInput);
      });
      
      approvedSpeciesCheckboxes.forEach((cb, index) => {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'approvedSpecies';
        hiddenInput.value = cb.value;
        form.appendChild(hiddenInput);
      });
    });
    
    // Temperature validation
    const tempMin = document.querySelector('input[name="storageTemperature.min"]');
    const tempMax = document.querySelector('input[name="storageTemperature.max"]');
    
    if (tempMin && tempMax) {
      tempMax.addEventListener('change', function() {
        if (tempMin.value && tempMax.value && parseFloat(tempMin.value) >= parseFloat(tempMax.value)) {
          alert('Maximum temperature must be greater than minimum temperature');
          tempMax.value = '';
        }
      });
    }
  });
</script>

<style>
  /* Custom styling for better form appearance */
  input:focus, select:focus, textarea:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
  
  .dark input:focus, .dark select:focus, .dark textarea:focus {
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
  }
  
  /* Smooth transitions */
  input, select, textarea {
    transition: all 0.2s ease-in-out;
  }
</style>