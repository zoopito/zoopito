<% layout("layouts/boilerplate") %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 px-4 py-8 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    
    <!-- Back Navigation -->
    <div class="mb-6">
      <a href="/vaccines" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Vaccines
      </a>
    </div>

    <!-- Header Section -->
    <div class="flex flex-col lg:flex-row lg:items-start justify-between gap-6 mb-8">
      <!-- Vaccine Title & Status -->
      <div class="flex-1">
        <div class="flex items-center gap-4 mb-4">
          <div class="p-3 rounded-xl bg-gradient-to-r from-blue-500 to-blue-600">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <div>
            <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white">
              <%= vaccine.name %>
            </h1>
            <div class="flex flex-wrap items-center gap-3 mt-2">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= vaccine.isActive ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' %>">
                <span class="w-2 h-2 rounded-full mr-2 <%= vaccine.isActive ? 'bg-green-500' : 'bg-gray-500' %>"></span>
                <%= vaccine.isActive ? 'Active' : 'Inactive' %>
              </span>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
                <%= vaccine.category === 'Core' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300' :
                   vaccine.category === 'Seasonal' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300' :
                   vaccine.category === 'Emergency' ? 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300' :
                   'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' %>">
                <%= vaccine.category %>
              </span>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300">
                <%= vaccine.vaccineType %>
              </span>
            </div>
          </div>
        </div>
        
        <!-- Brand & Manufacturer -->
        <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <span class="font-medium text-gray-900 dark:text-white"><%= vaccine.brand %></span>
          </div>
          <% if (vaccine.manufacturer) { %>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <span><%= vaccine.manufacturer %></span>
            </div>
          <% } %>
          <% if (vaccine.licenseNumber) { %>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span>License: <%= vaccine.licenseNumber %></span>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3">
        <a href="/vaccines/<%= vaccine._id %>/edit" 
           class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-medium rounded-xl hover:from-green-600 hover:to-emerald-600 transition-all transform hover:scale-105 shadow-lg shadow-green-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Vaccine
        </a>
        
        <% if (currUser && currUser.role === 'ADMIN') { %>
          <form action="/vaccines/<%= vaccine._id %>/toggle-active?_method=PATCH" method="POST" class="inline" onsubmit="return confirmToggleActive(event, `<%= vaccine.isActive %>`)">
            <input type="hidden" name="_method" value="PATCH">
            <button type="submit" 
                    class="inline-flex items-center gap-2 px-4 py-2.5 <%= vaccine.isActive ? 'bg-gradient-to-r from-yellow-500 to-amber-500 hover:from-yellow-600 hover:to-amber-600 shadow-yellow-500/25' : 'bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 shadow-green-500/25' %> text-white font-medium rounded-xl transition-all transform hover:scale-105 shadow-lg">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <% if (vaccine.isActive) { %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                <% } else { %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                <% } %>
              </svg>
              <%= vaccine.isActive ? 'Deactivate' : 'Activate' %>
            </button>
          </form>
        <% } %>
        
        <button onclick="window.print()" 
                class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105 shadow-lg shadow-blue-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
          </svg>
          Print
        </button>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Column - Basic Information -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Disease Target & Description -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            Disease Target & Protection
          </h2>
          <div class="space-y-4">
            <div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
                <%= vaccine.diseaseTarget %>
              </h3>
              <% if (vaccine.description) { %>
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                  <%= vaccine.description %>
                </p>
              <% } %>
            </div>
            
            <!-- Immunity Information -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <% if (vaccine.minimumAgeWeeks) { %>
                <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                  <div class="text-sm text-gray-600 dark:text-gray-400">Minimum Age</div>
                  <div class="text-xl font-bold text-gray-900 dark:text-white">
                    <%= vaccine.minimumAgeWeeks %> weeks
                  </div>
                </div>
              <% } %>
              
              <% if (vaccine.immunityDurationMonths) { %>
                <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                  <div class="text-sm text-gray-600 dark:text-gray-400">Immunity Duration</div>
                  <div class="text-xl font-bold text-gray-900 dark:text-white">
                    <%= vaccine.immunityDurationMonths %> months
                  </div>
                </div>
              <% } %>
              
              <% if (vaccine.withdrawalPeriodDays) { %>
                <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                  <div class="text-sm text-gray-600 dark:text-gray-400">Withdrawal Period</div>
                  <div class="text-xl font-bold text-gray-900 dark:text-white">
                    <%= vaccine.withdrawalPeriodDays %> days
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- ADMINistration & Dosage -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            ADMINistration & Dosage
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
              <div>
                <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">ADMINistration Route</h3>
                <p class="text-lg font-medium text-gray-900 dark:text-white">
                  <%= vaccine.ADMINistrationRoute %>
                </p>
              </div>
              
              <div>
                <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Standard Dosage</h3>
                <p class="text-lg font-medium text-gray-900 dark:text-white">
                  <% if (vaccine.standardDosage && vaccine.dosageUnit) { %>
                    <%= vaccine.standardDosage %> <%= vaccine.dosageUnit %>
                  <% } else { %>
                    <span class="text-gray-500 dark:text-gray-500">Not specified</span>
                  <% } %>
                </p>
              </div>
              
              <% if (vaccine.howToUse) { %>
                <div>
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Usage Instructions</h3>
                  <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                    <%= vaccine.howToUse %>
                  </p>
                </div>
              <% } %>
            </div>
            
            <!-- Timing Information -->
            <div class="space-y-4">
              <% if (vaccine.boosterIntervalWeeks) { %>
                <div class="p-4 bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-xl">
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Booster Schedule</h3>
                  <p class="text-2xl font-bold text-gray-900 dark:text-white">
                    Every <%= vaccine.boosterIntervalWeeks %> weeks
                  </p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                    (Approximately <%= Math.round(vaccine.boosterIntervalWeeks / 4.33) %> months)
                  </p>
                </div>
              <% } %>
              
              <!-- Recommended Schedule -->
              <div class="p-4 bg-gradient-to-r from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 rounded-xl">
                <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Recommended Annual Schedule</h3>
                <div class="space-y-2">
                  <div class="flex items-center justify-between">
                    <span class="text-gray-700 dark:text-gray-300">Primary Dose</span>
                    <span class="font-medium text-gray-900 dark:text-white">At <%= vaccine.minimumAgeWeeks || 8 %> weeks</span>
                  </div>
                  <% if (vaccine.boosterIntervalWeeks) { %>
                    <div class="flex items-center justify-between">
                      <span class="text-gray-700 dark:text-gray-300">1st Booster</span>
                      <span class="font-medium text-gray-900 dark:text-white">
                        After <%= vaccine.boosterIntervalWeeks %> weeks
                      </span>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-gray-700 dark:text-gray-300">Annual Boosters</span>
                      <span class="font-medium text-gray-900 dark:text-white">Yearly</span>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Safety Information -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.732 0L4.07 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
            Safety Information
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Contraindications -->
            <div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Contraindications</h3>
              <% if (vaccine.contraindications) { %>
                <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-xl">
                  <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    <%= vaccine.contraindications %>
                  </p>
                </div>
              <% } else { %>
                <p class="text-gray-500 dark:text-gray-500 italic">No specific contraindications listed</p>
              <% } %>
            </div>
            
            <!-- Side Effects -->
            <div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Side Effects</h3>
              <% if (vaccine.sideEffects) { %>
                <div class="p-4 bg-yellow-50 dark:bg-yellow-900/20 rounded-xl">
                  <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                    <%= vaccine.sideEffects %>
                  </p>
                </div>
              <% } else { %>
                <p class="text-gray-500 dark:text-gray-500 italic">No side effects listed</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Sidebar -->
      <div class="space-y-6">
        
        <!-- Target Species -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
            </svg>
            Target Species
          </h2>
          
          <div class="space-y-3">
            <!-- Approved Species -->
            <div>
              <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Approved Species</h3>
              <% if (vaccine.approvedSpecies && vaccine.approvedSpecies.length > 0) { %>
                <div class="flex flex-wrap gap-2">
                  <% vaccine.approvedSpecies.forEach(species => { %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      <%= species %>
                    </span>
                  <% }) %>
                </div>
              <% } else { %>
                <p class="text-gray-500 dark:text-gray-500 italic">No approved species listed</p>
              <% } %>
            </div>
            
            <!-- Target Species -->
            <div>
              <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Target Species</h3>
              <% if (vaccine.targetSpecies && vaccine.targetSpecies.length > 0) { %>
                <div class="flex flex-wrap gap-2">
                  <% vaccine.targetSpecies.forEach(species => { %>
                    <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                      <%= species %>
                    </span>
                  <% }) %>
                </div>
              <% } else { %>
                <p class="text-gray-500 dark:text-gray-500 italic">All species</p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Storage Information -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4 4 0 003 15z"/>
            </svg>
            Storage Information
          </h2>
          
          <div class="space-y-4">
            <!-- Temperature -->
            <div class="p-4 bg-gradient-to-r from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 rounded-xl">
              <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Storage Temperature</h3>
              <% if (vaccine.storageTemperature && vaccine.storageTemperature.min && vaccine.storageTemperature.max) { %>
                <div class="flex items-center justify-center">
                  <div class="text-3xl font-bold text-gray-900 dark:text-white">
                    <%= vaccine.storageTemperature.min %> - <%= vaccine.storageTemperature.max %>Â°C
                  </div>
                </div>
                <div class="mt-2 text-center">
                  <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= vaccine.requiresRefrigeration ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' %>">
                    <%= vaccine.requiresRefrigeration ? 'Refrigeration Required' : 'No Refrigeration Needed' %>
                  </div>
                </div>
              <% } else { %>
                <p class="text-gray-500 dark:text-gray-500 italic">Storage temperature not specified</p>
              <% } %>
            </div>
            
            <!-- Shelf Life -->
            <% if (vaccine.shelfLifeMonths) { %>
              <div class="p-4 bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-xl">
                <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Shelf Life</h3>
                <div class="text-2xl font-bold text-gray-900 dark:text-white text-center">
                  <%= vaccine.shelfLifeMonths %> months
                </div>
              </div>
            <% } %>
            
            <% if (vaccine.storageInfo) { %>
              <div class="mt-4">
                <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Additional Storage Notes</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm">
                  <%= vaccine.storageInfo %>
                </p>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Meta Information -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Meta Information
          </h2>
          
          <div class="space-y-3">
            <% if (vaccine.createdBy) { %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Created By</span>
                <span class="text-sm font-medium text-gray-900 dark:text-white">
                  <%= vaccine.createdBy.name || vaccine.createdBy.email %>
                </span>
              </div>
            <% } %>
            
            <% if (vaccine.createdAt) { %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Created Date</span>
                <span class="text-sm font-medium text-gray-900 dark:text-white">
