<script>
  // Toggle active status confirmation
  function confirmToggleActive(event, isActive) {
    const action = isActive ? 'deactivate' : 'activate';
    if (!confirm(`Are you sure you want to ${action} this vaccine?`)) {
      event.preventDefault();
      return false;
    }
    return true;
  }

  // Copy vaccine info to clipboard
  function copyVaccineInfo() {
    const vaccineInfo = `
Vaccine: <%= vaccine.name %>
Brand: <%= vaccine.brand %>
Disease Target: <%= vaccine.diseaseTarget %>
Type: <%= vaccine.vaccineType %>
Category: <%= vaccine.category %>
ADMINistration: <%= vaccine.ADMINistrationRoute %>
<% if (vaccine.standardDosage && vaccine.dosageUnit) { %>Dosage: <%= vaccine.standardDosage %> <%= vaccine.dosageUnit %><% } %>
<% if (vaccine.boosterIntervalWeeks) { %>Booster Interval: Every <%= vaccine.boosterIntervalWeeks %> weeks (<%= Math.round(vaccine.boosterIntervalWeeks / 4.33) %> months)<% } %>
<% if (vaccine.minimumAgeWeeks) { %>Minimum Age: <%= vaccine.minimumAgeWeeks %> weeks<% } %>
<% if (vaccine.immunityDurationMonths) { %>Immunity Duration: <%= vaccine.immunityDurationMonths %> months<% } %>
Status: <%= vaccine.isActive ? 'Active' : 'Inactive' %>
    `.trim();

    navigator.clipboard.writeText(vaccineInfo)
      .then(() => {
        showNotification('Vaccine information copied to clipboard!', 'success');
      })
      .catch(err => {
        console.error('Failed to copy: ', err);
        showNotification('Failed to copy information', 'error');
      });
  }

  // Show notification
  function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 px-6 py-3 rounded-xl shadow-xl z-50 animate-fade-in ${
      type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span>${message}</span>
      </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.remove();
    }, 3000);
  }

  // Print optimization
  document.addEventListener('DOMContentLoaded', function() {
    // Add print styles
    const style = document.createElement('style');
    style.textContent = `
      @media print {
        .no-print { display: none !important; }
        body { background: white !important; }
        .bg-gradient-to-br { background: white !important; }
        .shadow-xl { box-shadow: none !important; }
        .border { border: 1px solid #e5e7eb !important; }
        .dark\\:bg-gray-800 { background: white !important; }
        .dark\\:text-white { color: black !important; }
        .text-gray-600, .text-gray-500, .text-gray-400 { color: #6b7280 !important; }
      }
    `;
    document.head.appendChild(style);
    
    // Add no-print class to action buttons
    const actionButtons = document.querySelectorAll('button, a[href*="edit"], form');
    actionButtons.forEach(btn => {
      btn.classList.add('no-print');
    });
  });
</script>

