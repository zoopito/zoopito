<!-- JavaScript for Enhanced Offline/Online Handling -->
<script>
  // Enhanced connection management
  let offlineTimer;
  let connectionCheckInterval;

  function showOfflineBanner() {
    const banner = document.getElementById('offline-banner');
    const overlay = document.getElementById('offline-overlay');
    const onlineBanner = document.getElementById('online-banner');
    
    if (onlineBanner) onlineBanner.classList.add('hidden');
    banner.classList.remove('hidden');
    overlay.classList.remove('hidden');
    
    // Start connection timer animation
    const timer = document.getElementById('connectionTimer');
    timer.style.animation = 'shrink 60s linear infinite';
    
    // Disable critical interactions
    disableCriticalInteractions();
    
    // Start periodic connection checks
    startConnectionCheck();
    
    // Notify user
    if (Notification.permission === 'granted') {
      new Notification('Zoopito - Offline Mode', {
        body: 'You are offline. Some features are limited.',
        icon: '/images/logo.png'
      });
    }
  }

  function showOnlineBanner() {
    const banner = document.getElementById('offline-banner');
    const overlay = document.getElementById('offline-overlay');
    const onlineBanner = document.getElementById('online-banner');
    
    banner.classList.add('hidden');
    overlay.classList.add('hidden');
    
    if (onlineBanner) {
      onlineBanner.classList.remove('hidden');
      setTimeout(() => {
        onlineBanner.classList.add('hidden');
      }, 5000);
    }
    
    // Enable interactions
    enableCriticalInteractions();
    
    // Stop connection checks
    stopConnectionCheck();
    
    // Sync offline data if any
    syncOfflineData();
  }

  function retryConnection() {
    if (navigator.onLine) {
      showOnlineBanner();
    } else {
      // Show retrying animation
      const button = document.querySelector('#offline-banner button');
      const originalText = button.textContent;
      button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
      button.disabled = true;
      
      setTimeout(() => {
        button.textContent = originalText;
        button.disabled = false;
        
        if (!navigator.onLine) {
          alert('Still offline. Please check your internet connection.');
        }
      }, 2000);
    }
  }

  function hideBanner(type) {
    const banner = document.getElementById(type + '-banner');
    if (banner) banner.classList.add('hidden');
  }

  function disableCriticalInteractions() {
    const criticalElements = document.querySelectorAll('form, [data-requires-online="true"], .critical-action');
    criticalElements.forEach(el => {
      el.style.opacity = '0.6';
      el.style.pointerEvents = 'none';
      el.title = 'Action disabled while offline';
    });
  }

  function enableCriticalInteractions() {
    const criticalElements = document.querySelectorAll('form, [data-requires-online="true"], .critical-action');
    criticalElements.forEach(el => {
      el.style.opacity = '';
      el.style.pointerEvents = '';
      el.title = '';
    });
  }

  function startConnectionCheck() {
    connectionCheckInterval = setInterval(() => {
      if (navigator.onLine) {
        showOnlineBanner();
      }
    }, 5000); // Check every 5 seconds
  }

  function stopConnectionCheck() {
    if (connectionCheckInterval) {
      clearInterval(connectionCheckInterval);
    }
  }

  async function syncOfflineData() {
    // Check if there's offline data to sync
    const offlineData = localStorage.getItem('zoopito_offline_data');
    if (offlineData) {
      console.log('Syncing offline data...');
     try {
            const res = await fetch("/subscribe", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ email }),
            });

            const data = await res.json();

            if (!res.ok) {
                throw new Error(data.message || "Subscription failed");
            }

            // Show success
            successMessage.querySelector("p").textContent = data.message;
            successMessage.classList.remove("hidden");

            newsletterForm.reset();

            setTimeout(() => {
                successMessage.classList.add("hidden");
            }, 5000);

        } catch (error) {
            alert(error.message);
        } finally {
            submitBtn.disabled = false;
            submitBtn.innerHTML = "Subscribe Now";
        }
    }
  }

  // Initialize connection status
  window.addEventListener('load', () => {
    if (!navigator.onLine) {
      showOfflineBanner();
    }
  });

  window.addEventListener('online', showOnlineBanner);
  window.addEventListener('offline', showOfflineBanner);

  // Back to top functionality
  document.getElementById('footerBackToTop')?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });

  // Newsletter form handling
  document.querySelector('footer input[type="email"]')?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      subscribeNewsletter();
    }
  });

  function subscribeNewsletter() {
    const emailInput = document.querySelector('footer input[type="email"]');
    const email = emailInput.value.trim();
    
    if (!email || !validateEmail(email)) {
      alert('Please enter a valid email address');
      return;
    }
    
    // Simulate subscription (replace with actual API call)
    emailInput.value = '';
    alert('Thank you for subscribing to Zoopito updates!');
  }

  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
  }

  // Add animation for the shrink effect
  const style = document.createElement('style');
  style.textContent = `
    @keyframes shrink {
      from { width: 100%; }
      to { width: 0%; }
    }
  `;
  document.head.appendChild(style);
</script>

