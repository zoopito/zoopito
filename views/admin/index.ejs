<script>
  // Toggle custom date range
  document.getElementById('dateRange').addEventListener('change', function() {
    const customRangeDiv = document.getElementById('customDateRange');
    if (this.value === 'custom') {
      customRangeDiv.classList.remove('hidden');
    } else {
      customRangeDiv.classList.add('hidden');
    }
  });

  // Clear all filters
  function clearFilters() {
    document.getElementById('dateRange').value = 'today';
    document.getElementById('region').value = '';
    document.getElementById('animalType').value = '';
    document.getElementById('status').value = '';
    document.getElementById('customDateRange').classList.add('hidden');
    
    // Show notification
    showNotification('Filters cleared successfully', 'success');
  }

  function showNotification(message, type) {
    // Create notification element
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 px-6 py-3 rounded-xl shadow-xl z-50 transform transition-all duration-300 ${
      type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>${message}</span>
      </div>
    `;
    
    document.body.appendChild(notification);
    
    // Remove after 3 seconds
    setTimeout(() => {
      notification.style.opacity = '0';
      notification.style.transform = 'translateY(-20px)';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }

  // Initialize tooltips
  document.addEventListener('DOMContentLoaded', function() {
    // Add hover effects for charts
    const chartBars = document.querySelectorAll('[class*="bg-gradient-to-t"]');
    chartBars.forEach(bar => {
      bar.addEventListener('mouseenter', function() {
        this.classList.add('opacity-80');
      });
      bar.addEventListener('mouseleave', function() {
        this.classList.remove('opacity-80');
      });
    });
  });
</script>

