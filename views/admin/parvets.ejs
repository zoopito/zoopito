<!-- JavaScript -->
<script>
  // Bulk Upload Modal
  function showBulkUpload() {
    document.getElementById('bulkUploadModal').classList.remove('hidden');
  }
  
  function closeBulkUpload() {
    document.getElementById('bulkUploadModal').classList.add('hidden');
  }
  
  function processBulkUpload() {
    const fileInput = document.getElementById('fileInput');
    if (!fileInput.files.length) {
      alert('Please select a file first.');
      return;
    }
    
    const file = fileInput.files[0];
    if (!['.csv', '.xlsx', '.xls'].some(ext => file.name.toLowerCase().endsWith(ext))) {
      alert('Please upload a CSV or Excel file.');
      return;
    }
    
    // Show loading state
    const processBtn = document.querySelector('#bulkUploadModal button:last-child');
    const originalText = processBtn.textContent;
    processBtn.textContent = 'Processing...';
    processBtn.disabled = true;
    
    // Simulate upload process
    setTimeout(() => {
      alert('Bulk upload processed successfully!');
      closeBulkUpload();
      processBtn.textContent = originalText;
      processBtn.disabled = false;
      fileInput.value = '';
    }, 2000);
  }

  // Dropdown menus for action buttons
  document.addEventListener('DOMContentLoaded', function() {
    // Close all dropdowns when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.paravet-actions-btn') && !e.target.closest('.paravet-dropdown')) {
        document.querySelectorAll('.paravet-dropdown').forEach(dropdown => {
          dropdown.classList.add('hidden');
        });
      }
    });

    // Toggle dropdowns
    document.querySelectorAll('.paravet-actions-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.stopPropagation();
        const paravetId = this.getAttribute('data-id');
        const dropdown = document.getElementById(`dropdown-${paravetId}`);
        dropdown.classList.toggle('hidden');
        dropdown.classList.add('paravet-dropdown');
      });
    });

    // Search functionality
    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
      searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const paravets = document.querySelectorAll('[class*="bg-white/90"]');
        
        paravets.forEach(paravet => {
          const name = paravet.querySelector('h3')?.textContent.toLowerCase() || '';
          const emailSpans = paravet.querySelectorAll('span');
          let email = '';
          for (let span of emailSpans) {
            if (span.textContent.includes('@')) {
              email = span.textContent.toLowerCase();
              break;
            }
          }
          const license = paravet.querySelector('p')?.textContent.toLowerCase() || '';
          
          if (name.includes(searchTerm) || email.includes(searchTerm) || license.includes(searchTerm)) {
            paravet.style.display = 'block';
          } else {
            paravet.style.display = 'none';
          }
        });
      });
    }

    // Filter functionality
    document.getElementById('statusFilter').addEventListener('change', function() {
      filterParavets();
    });
    
    document.getElementById('qualificationFilter').addEventListener('change', function() {
      filterParavets();
    });
    
    document.getElementById('areaFilter').addEventListener('change', function() {
      filterParavets();
    });
  });

  function filterParavets() {
    const statusFilter = document.getElementById('statusFilter').value;
    const qualificationFilter = document.getElementById('qualificationFilter').value;
    const areaFilter = document.getElementById('areaFilter').value;
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    
    const paravetCards = document.querySelectorAll('[class*="bg-white/90"]');
    
    paravetCards.forEach(card => {
      let status = '';
      const statusSpans = card.querySelectorAll('span');
      for (let span of statusSpans) {
        if (span.textContent.includes('Active')) {
          status = 'active';
          break;
        } else if (span.textContent.includes('Inactive')) {
          status = 'inactive';
          break;
        }
      }
      
      let qualification = '';
      const spans = card.querySelectorAll('span');
      for (let i = 0; i < spans.length; i++) {
        if (spans[i].textContent.includes('Qualification')) {
          qualification = (spans[i + 1]?.textContent || '').toLowerCase();
          break;
        }
      }
      
      const name = card.querySelector('h3')?.textContent.toLowerCase() || '';
      let email = '';
      const emailSpans = card.querySelectorAll('span');
      for (let span of emailSpans) {
        if (span.textContent.includes('@')) {
          email = span.textContent.toLowerCase();
          break;
        }
      }
      
      let shouldShow = true;
      
      // Apply status filter
      if (statusFilter && status !== statusFilter) {
        shouldShow = false;
      }
      
      // Apply qualification filter
      if (qualificationFilter && !qualification.includes(qualificationFilter)) {
        shouldShow = false;
      }
      
      // Apply search filter
      if (searchTerm && !name.includes(searchTerm) && !email.includes(searchTerm)) {
        shouldShow = false;
      }
      
      card.style.display = shouldShow ? 'block' : 'none';
    });
  }

  function clearFilters() {
    document.getElementById('searchInput').value = '';
    document.getElementById('statusFilter').value = '';
    document.getElementById('qualificationFilter').value = '';
    document.getElementById('areaFilter').value = '';
    
    // Show all paravets
    const paravetCards = document.querySelectorAll('[class*="bg-white/90"]');
    paravetCards.forEach(card => {
      card.style.display = 'block';
    });
    
    showNotification('Filters cleared', 'success');
  }
  
  function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 px-6 py-3 rounded-xl shadow-xl z-50 animate-fade-in ${
      type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span>${message}</span>
      </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.remove();
    }, 3000);
  }

  // Prevent modal close on backdrop click
  document.getElementById('bulkUploadModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeBulkUpload();
    }
  });
</script>

