<% layout("layouts/boilerplate") %>


<% const roleColors = {
                        'ADMIN': 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300',
                        'SALES': 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300',
                        'PARAVET': 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300',
                        'FARMER': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300',
                        'USER': 'bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-300'
                      }; %>
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">User Management</h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Manage all system users, their roles and permissions</p>
      </div>
      <div class="mt-4 md:mt-0">
        <a href="/admin/users/create" class="inline-flex items-center px-4 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 transition-all shadow-lg shadow-blue-600/25">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add New User
        </a>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4 mb-8">
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4">
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Users</p>
        <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1"><%= stats.total %></p>
      </div>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4">
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active</p>
        <p class="text-2xl font-bold text-green-600 dark:text-green-400 mt-1"><%= stats.active %></p>
      </div>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4">
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Blocked</p>
        <p class="text-2xl font-bold text-red-600 dark:text-red-400 mt-1"><%= stats.blocked %></p>
      </div>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4">
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Verified</p>
        <p class="text-2xl font-bold text-blue-600 dark:text-blue-400 mt-1"><%= stats.verified %></p>
      </div>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4">
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Admins</p>
        <p class="text-2xl font-bold text-purple-600 dark:text-purple-400 mt-1"><%= stats.byRole.admin %></p>
      </div>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow p-4">
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Staff</p>
        <p class="text-2xl font-bold text-yellow-600 dark:text-yellow-400 mt-1"><%= stats.byRole.sales + stats.byRole.paravet %></p>
      </div>
    </div>

    <!-- Filters Card -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow mb-8">
      <div class="p-6 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Filters & Search</h2>
      </div>
      <div class="p-6">
        <form method="GET" class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search -->
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Search</label>
              <input 
                type="text" 
                name="search" 
                placeholder="Search by name, email, mobile..." 
                value="<%= filters.search || '' %>"
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
            </div>
            
            <!-- Role Filter -->
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Role</label>
              <select 
                name="role" 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                <option value="all">All Roles</option>
                <% roles.forEach(r => { %>
                  <option value="<%= r.toLowerCase() %>" <%= filters.role === r.toLowerCase() ? 'selected' : '' %>>
                    <%= r %>
                  </option>
                <% }) %>
              </select>
            </div>
            
            <!-- Status Filter -->
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
              <select 
                name="status" 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                <option value="">All Status</option>
                <% statuses.forEach(s => { %>
                  <option value="<%= s %>" <%= filters.status === s ? 'selected' : '' %>>
                    <%= s.charAt(0).toUpperCase() + s.slice(1) %>
                  </option>
                <% }) %>
              </select>
            </div>
            
            <!-- Sort By -->
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Sort By</label>
              <select 
                name="sortBy" 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                <option value="createdAt" <%= filters.sortBy === 'createdAt' ? 'selected' : '' %>>Registration Date</option>
                <option value="name" <%= filters.sortBy === 'name' ? 'selected' : '' %>>Name</option>
                <option value="email" <%= filters.sortBy === 'email' ? 'selected' : '' %>>Email</option>
                <option value="lastLogin" <%= filters.sortBy === 'lastLogin' ? 'selected' : '' %>>Last Login</option>
              </select>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <select 
                name="sortOrder" 
                class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
              >
                <option value="desc" <%= filters.sortOrder === 'desc' ? 'selected' : '' %>>Descending</option>
                <option value="asc" <%= filters.sortOrder === 'asc' ? 'selected' : '' %>>Ascending</option>
              </select>
              <select 
                name="limit" 
                class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
              >
                <option value="10" <%= filters.limit === '10' ? 'selected' : '' %>>10 per page</option>
                <option value="20" <%= filters.limit === '20' || !filters.limit ? 'selected' : '' %>>20 per page</option>
                <option value="50" <%= filters.limit === '50' ? 'selected' : '' %>>50 per page</option>
                <option value="100" <%= filters.limit === '100' ? 'selected' : '' %>>100 per page</option>
              </select>
            </div>
            
            <div class="flex space-x-3">
              <button 
                type="submit" 
                class="px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
              >
                Apply Filters
              </button>
              <a 
                href="/admin/allusers" 
                class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
              >
                Clear All
              </a>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Users Table -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow overflow-hidden">
      <!-- Table Header -->
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
          Users (<%= pagination.totalUsers %>)
        </h2>
        <div class="flex items-center space-x-2">
          <button onclick="exportUsers()" class="px-3 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700">
            Export CSV
          </button>
        </div>
      </div>

      <!-- Table -->
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                User
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Contact
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Role & Status
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Activity
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% if (users.length === 0) { %>
              <tr>
                <td colspan="5" class="px-6 py-12 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                  <p class="mt-4 text-gray-500 dark:text-gray-400">No users found matching your criteria</p>
                </td>
              </tr>
            <% } else { %>
              <% users.forEach(user => { %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                  <!-- User Info -->
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 flex items-center justify-center text-white font-bold">
                          <%= user.name.charAt(0).toUpperCase() %>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900 dark:text-white">
                          <%= user.name %>
                        </div>
                        <div class="text-xs text-gray-500 dark:text-gray-400">
                          ID: <%= user._id.toString().slice(-6) %>
                        </div>
                        <% if (user.createdBy) { %>
                          <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                            Created by: <%= user.createdBy.name %>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  </td>

                  <!-- Contact Info -->
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900 dark:text-white"><%= user.email %></div>
                    <% if (user.mobile) { %>
                      <div class="text-sm text-gray-500 dark:text-gray-400"><%= user.mobile %></div>
                    <% } %>
                    <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                      Joined: <%= new Date(user.createdAt).toLocaleDateString() %>
                    </div>
                  </td>

                  <!-- Role & Status -->
                  <td class="px-6 py-4">
                    <div class="space-y-2">
                      <!-- Role Badge -->
                      
                      <span class="inline-flex px-2.5 py-0.5 rounded-full text-xs font-medium <%= roleColors[user.role] || 'bg-gray-100 text-gray-800' %>">
                        <%= user.role %>
                      </span>
                      
                      <!-- Status Indicators -->
                      <div class="flex flex-wrap gap-1">
                        <% if (user.isActive) { %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                            <span class="w-1.5 h-1.5 rounded-full bg-green-500 mr-1"></span>
                            Active
                          </span>
                        <% } else { %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-300">
                            <span class="w-1.5 h-1.5 rounded-full bg-gray-500 mr-1"></span>
                            Inactive
                          </span>
                        <% } %>

                        <% if (user.isBlocked) { %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300">
                            <span class="w-1.5 h-1.5 rounded-full bg-red-500 mr-1"></span>
                            Blocked
                          </span>
                        <% } %>

                        <% if (user.isVerified) { %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                            <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            Verified
                          </span>
                        <% } %>
                      </div>

                      <!-- Additional Info -->
                      <% if (user.designation) { %>
                        <div class="text-xs text-gray-500 dark:text-gray-400">
                          <%= user.designation %>
                        </div>
                      <% } %>
                    </div>
                  </td>

                  <!-- Activity -->
                  <td class="px-6 py-4">
                    <div class="space-y-1">
                      <% if (user.lastLogin) { %>
                        <div class="text-sm text-gray-900 dark:text-white">
                          Last Login: <%= new Date(user.lastLogin).toLocaleDateString() %>
                        </div>
                        <div class="text-xs text-gray-500 dark:text-gray-400">
                          <%= new Date(user.lastLogin).toLocaleTimeString() %>
                        </div>
                      <% } else { %>
                        <div class="text-sm text-gray-500 dark:text-gray-400">Never logged in</div>
                      <% } %>
                      
                      <% if (user.loginHistory && user.loginHistory.length > 0) { %>
                        <div class="text-xs text-gray-500 dark:text-gray-400">
                          <%= user.loginHistory.length %> login(s)
                        </div>
                      <% } %>
                    </div>
                  </td>

                  <!-- Actions -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center space-x-2">
                      <!-- View Button -->
                      <a 
                        href="/admin/users/<%= user._id %>" 
                        class="inline-flex items-center p-1.5 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
                        title="View Details"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      </a>
                      
                      <!-- Edit Button -->
                      <a 
                        href="/admin/users/<%= user._id %>/edit" 
                        class="inline-flex items-center p-1.5 text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
                        title="Edit User"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      </a>
                      
                      <!-- Status Toggle -->
                      <form 
                        action="/admin/users/<%= user._id %>/<%= user.isActive ? 'deactivate' : 'activate' %>" 
                        method="POST" 
                        class="inline"
                      >
                        <button 
                          type="submit" 
                          class="inline-flex items-center p-1.5 <%= user.isActive ? 'text-yellow-500 hover:text-yellow-700' : 'text-green-500 hover:text-green-700' %>"
                          title="<%= user.isActive ? 'Deactivate' : 'Activate' %>"
                          onclick="return confirm('<%= user.isActive ? 'Deactivate' : 'Activate' %> this user?')"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <% if (user.isActive) { %>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                            <% } else { %>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            <% } %>
                          </svg>
                        </button>
                      </form>
                      
                      <!-- Block/Unblock -->
                      <% if (!user.isBlocked && user.role !== 'ADMIN') { %>
                        <form 
                          action="/admin/users/<%= user._id %>/block" 
                          method="POST" 
                          class="inline"
                        >
                          <button 
                            type="submit" 
                            class="inline-flex items-center p-1.5 text-red-500 hover:text-red-700"
                            title="Block User"
                            onclick="return confirm('Block this user? They will not be able to login.')"
                          >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                            </svg>
                          </button>
                        </form>
                      <% } else if (user.isBlocked) { %>
                        <form 
                          action="/admin/users/<%= user._id %>/unblock" 
                          method="POST" 
                          class="inline"
                        >
                          <button 
                            type="submit" 
                            class="inline-flex items-center p-1.5 text-green-500 hover:text-green-700"
                            title="Unblock User"
                            onclick="return confirm('Unblock this user?')"
                          >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                          </button>
                        </form>
                      <% } %>
                      
                      <!-- Quick Actions Dropdown -->
                      <div class="relative inline-block text-left">
                        <button 
                          type="button" 
                          class="inline-flex items-center p-1.5 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300"
                          id="menu-button-<%= user._id %>"
                          onclick="toggleDropdown('<%= user._id %>')"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                          </svg>
                        </button>
                        
                        <!-- Dropdown Menu -->
                        <div 
                          id="dropdown-<%= user._id %>" 
                          class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-10"
                        >
                          <div class="py-1">
                            <a 
                              href="/admin/users/<%= user._id %>/login-history" 
                              class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"
                            >
                              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                              </svg>
                              Login History
                            </a>
                            <a 
                              href="/admin/users/<%= user._id %>/reset-password" 
                              class="flex items-center px-4 py-2 text-sm text-blue-600 dark:text-blue-400 hover:bg-gray-100 dark:hover:bg-gray-700"
                              onclick="return confirm('Reset password for this user?')"
                            >
                              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                              </svg>
                              Reset Password
                            </a>
                            <% if (user.role === 'FARMER') { %>
                              <a 
                                href="/admin/farmers/<%= user._id %>" 
                                class="flex items-center px-4 py-2 text-sm text-green-600 dark:text-green-400 hover:bg-gray-100 dark:hover:bg-gray-700"
                              >
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                </svg>
                                Farmer Profile
                              </a>
                            <% } %>
                            <div class="border-t border-gray-200 dark:border-gray-700 my-1"></div>
                            <form 
                              action="/admin/users/<%= user._id %>/delete" 
                              method="POST" 
                              onsubmit="return confirm('⚠️ Delete this user permanently? This action cannot be undone.')"
                            >
                              <button 
                                type="submit" 
                                class="flex items-center w-full px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700"
                              >
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                                Delete User
                              </button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (pagination.totalPages > 1) { %>
        <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-700 dark:text-gray-300">
              Showing <span class="font-medium"><%= (pagination.page - 1) * pagination.limit + 1 %></span> to 
              <span class="font-medium"><%= Math.min(pagination.page * pagination.limit, pagination.totalUsers) %></span> of 
              <span class="font-medium"><%= pagination.totalUsers %></span> users
            </div>
            
            <div class="flex items-center space-x-2">
              <!-- Previous Button -->
              <% if (pagination.page > 1) { %>
                <a 
                  href="?page=<%= pagination.page - 1 %>&<%= new URLSearchParams(filters).toString() %>" 
                  class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700"
                >
                  Previous
                </a>
              <% } %>
              
              <!-- Page Numbers -->
              <div class="flex items-center space-x-1">
                <% 
                  let startPage = Math.max(1, pagination.page - 2);
                  let endPage = Math.min(pagination.totalPages, startPage + 4);
                  if (endPage - startPage < 4) {
                    startPage = Math.max(1, endPage - 4);
                  }
                %>
                
                <% if (startPage > 1) { %>
                  <a 
                    href="?page=1&<%= new URLSearchParams(filters).toString() %>" 
                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 dark:border-gray-600 rounded text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700"
                  >
                    1
                  </a>
                  <% if (startPage > 2) { %>
                    <span class="px-2 text-gray-500">...</span>
                  <% } %>
                <% } %>
                
                <% for (let i = startPage; i <= endPage; i++) { %>
                  <a 
                    href="?page=<%= i %>&<%= new URLSearchParams(filters).toString() %>" 
                    class="inline-flex items-center px-3 py-1.5 border rounded text-sm font-medium <%= pagination.page === i ? 'bg-blue-600 text-white border-blue-600' : 'border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700' %>"
                  >
                    <%= i %>
                  </a>
                <% } %>
                
                <% if (endPage < pagination.totalPages) { %>
                  <% if (endPage < pagination.totalPages - 1) { %>
                    <span class="px-2 text-gray-500">...</span>
                  <% } %>
                  <a 
                    href="?page=<%= pagination.totalPages %>&<%= new URLSearchParams(filters).toString() %>" 
                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 dark:border-gray-600 rounded text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700"
                  >
                    <%= pagination.totalPages %>
                  </a>
                <% } %>
              </div>
              
              <!-- Next Button -->
              <% if (pagination.page < pagination.totalPages) { %>
                <a 
                  href="?page=<%= pagination.page + 1 %>&<%= new URLSearchParams(filters).toString() %>" 
                  class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700"
                >
                  Next
                </a>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Role Distribution Chart (Optional) -->
    <div class="mt-8 bg-white dark:bg-gray-800 rounded-xl shadow p-6">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Role Distribution</h3>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        <% Object.entries(stats.byRole).forEach(([role, count]) => { %>
          <div class="text-center p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
            <div class="text-2xl font-bold <%= roleColors[role.toUpperCase()]?.split(' ')[0] %>">
              <%= count %>
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              <%= role.charAt(0).toUpperCase() + role.slice(1) %>
            </div>
            <div class="text-xs text-gray-500 dark:text-gray-500 mt-1">
              <%= ((count / stats.total) * 100).toFixed(1) %>%
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript -->
<script>
  // Toggle dropdown menus
  function toggleDropdown(userId) {
    const dropdown = document.getElementById(`dropdown-${userId}`);
    dropdown.classList.toggle('hidden');
    
    // Close other dropdowns
    document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
      if (d.id !== `dropdown-${userId}`) {
        d.classList.add('hidden');
      }
    });
  }

  // Close dropdowns when clicking outside
  document.addEventListener('click', function(event) {
    if (!event.target.closest('[id^="menu-button-"]') && !event.target.closest('[id^="dropdown-"]')) {
      document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
        d.classList.add('hidden');
      });
    }
  });

  // Export to CSV function
  function exportUsers() {
    const params = new URLSearchParams(window.location.search);
    params.set('format', 'csv');
    window.location.href = '/admin/users/export?' + params.toString();
  }

  // Quick status update
  function quickUpdate(userId, action) {
    if (confirm(`Are you sure you want to ${action} this user?`)) {
      fetch(`/admin/users/${userId}/${action}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert('Failed to update user status');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Failed to update user status');
      });
    }
  }

  // Auto-refresh page every 5 minutes to show latest user activity
  setTimeout(() => {
    if (!document.hidden) {
      location.reload();
    }
  }, 5 * 60 * 1000); // 5 minutes
</script>

