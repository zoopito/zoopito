                            <!-- Reaction Severity -->
                            <div>
                                <label for="reactionSeverity" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    <i class="fas fa-exclamation-circle mr-2 text-gray-500"></i>
