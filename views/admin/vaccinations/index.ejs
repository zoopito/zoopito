    blocked: [
      {
        id: 4,
        animal: { name: "Radha", id: "AN202304", farmer: "Vikram Singh", village: "Village D" },
        treatment: "HS-BQ Vaccine",
        scheduledDate: "2024-06-15",
        status: "blocked",
        pregnancy: { isPregnant: true, month: 8 },
        animalType: "cow",
        reason: "Pregnancy safety: Month 6-9 blocked"
      }
    ]
  };

  // Tab functionality
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.tab-button');
    const tableBody = document.getElementById('tasksTable');
    
    function loadTasks(tab) {
      tableBody.innerHTML = '';
      let tasks = [];
      
      switch(tab) {
        case 'today':
          tasks = dummyTasks.today;
          break;
        case 'week':
          tasks = dummyTasks.week;
          break;
        case 'blocked':
          tasks = dummyTasks.blocked;
          break;
        default:
          tasks = [...dummyTasks.today, ...dummyTasks.week, ...dummyTasks.blocked];
      }
      
      if (tasks.length === 0) {
        tableBody.innerHTML = `
          <tr>
            <td colspan="6" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
              <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-lg font-medium">No tasks found</p>
              <p class="text-sm mt-1">All treatments are up to date</p>
            </td>
          </tr>
        `;
        return;
      }
      
      tasks.forEach(task => {
        const row = document.createElement('tr');
        row.className = 'hover:bg-gray-50 dark:hover:bg-gray-700/50';
        
        // Determine status color
        let statusColor = 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300';
        if (task.status === 'completed') {
          statusColor = 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300';
        } else if (task.status === 'blocked') {
          statusColor = 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300';
        }
        
        // Pregnancy safety message
        let pregnancyMessage = 'Safe';
        let pregnancyColor = 'text-green-600 dark:text-green-400';
        
        if (task.pregnancy.isPregnant) {
          if (task.pregnancy.month >= 6 && task.pregnancy.month <= 9) {
            if (task.treatment === 'HS-BQ Vaccine' || task.treatment === 'Deworming') {
              pregnancyMessage = 'BLOCKED (Pregnancy Month 6-9)';
              pregnancyColor = 'text-red-600 dark:text-red-400 font-semibold';
            } else if (task.treatment === 'FMD Vaccine') {
              pregnancyMessage = 'Safe in pregnancy';
              pregnancyColor = 'text-green-600 dark:text-green-400';
            }
          } else {
            pregnancyMessage = `Pregnant (Month ${task.pregnancy.month})`;
            pregnancyColor = 'text-blue-600 dark:text-blue-400';
          }
        }
        
        row.innerHTML = `
          <td class="px-6 py-4">
            <div>
              <div class="font-medium text-gray-900 dark:text-white">${task.animal.name} (${task.animal.id})</div>
              <div class="text-sm text-gray-500 dark:text-gray-400">
                Farmer: ${task.animal.farmer} • ${task.animal.village}
              </div>
              <span class="inline-flex items-center px-2 py-1 mt-1 text-xs font-medium rounded-full ${task.animalType === 'cow' ? 'bg-pink-100 text-pink-800 dark:bg-pink-900/30 dark:text-pink-300' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'}">
                ${task.animalType.charAt(0).toUpperCase() + task.animalType.slice(1)}
              </span>
            </div>
          </td>
          <td class="px-6 py-4">
            <div class="font-medium text-gray-900 dark:text-white">${task.treatment}</div>
            ${task.reason ? `<div class="text-sm text-red-600 dark:text-red-400 mt-1">${task.reason}</div>` : ''}
          </td>
          <td class="px-6 py-4">
            <div class="font-medium text-gray-900 dark:text-white">${formatDate(task.scheduledDate)}</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              ${getDaysUntil(task.scheduledDate)}
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${statusColor}">
              ${task.status.charAt(0).toUpperCase() + task.status.slice(1)}
            </span>
          </td>
          <td class="px-6 py-4">
            <div class="${pregnancyColor} text-sm">
              ${pregnancyMessage}
            </div>
          </td>
          <td class="px-6 py-4 text-right">
            ${task.status !== 'blocked' ? `
              <button onclick="markCompleted(${task.id})" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-300">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Mark Done
              </button>
            ` : `
              <button onclick="viewBlockedDetails(${task.id})" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
                View Details
              </button>
            `}
          </td>
        `;
        
        tableBody.appendChild(row);
      });
    }
    
    // Set up tab click handlers
    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        // Remove active class from all tabs
        tabs.forEach(t => {
          t.classList.remove('border-blue-500', 'text-blue-600', 'dark:text-blue-400');
          t.classList.add('border-transparent', 'text-gray-500', 'dark:text-gray-400');
        });
        
        // Add active class to clicked tab
        this.classList.remove('border-transparent', 'text-gray-500', 'dark:text-gray-400');
        this.classList.add('border-blue-500', 'text-blue-600', 'dark:text-blue-400');
        
        // Load tasks for this tab
        loadTasks(this.id.replace('tab-', ''));
      });
    });
    
    // Load today's tasks by default
    loadTasks('today');
  });

  // Helper functions
  function formatDate(dateString) {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-IN', { 
      day: 'numeric', 
      month: 'short', 
      year: 'numeric' 
    });
  }
  
  function getDaysUntil(dateString) {
    const today = new Date();
    const target = new Date(dateString);
    const diffTime = target - today;
    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
    
    if (diffDays === 0) return 'Today';
    if (diffDays === 1) return 'Tomorrow';
    if (diffDays > 0) return `In ${diffDays} days`;
    if (diffDays === -1) return 'Yesterday';
    return `${Math.abs(diffDays)} days ago`;
  }

