    document.getElementById('tab-today').classList.remove('border-transparent', 'text-gray-500', 'dark:text-gray-400');
    document.getElementById('tab-today').classList.add('border-blue-500', 'text-blue-600', 'dark:text-blue-400');
    
    loadTasks('today');
    
    showNotification('Filters cleared', 'success');
