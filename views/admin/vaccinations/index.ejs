  function generateSchedule() {
    const animalType = document.getElementById('animalTypeSelect').value;
    const regMonth = parseInt(document.getElementById('regMonthSelect').value);
    const pregnancyStatus = document.getElementById('pregnancySelect').value;
    
    // Calculate HS-BQ date based on rules
    let hsbqDate;
    if (regMonth >= 1 && regMonth <= 4) {
      hsbqDate = `June ${new Date().getFullYear()}`;
    } else if (regMonth >= 5 && regMonth <= 6) {
      hsbqDate = 'May-June (same year)';
    } else {
      hsbqDate = `June ${new Date().getFullYear() + 1}`;
    }
    
    // Pregnancy safety messages
    let safetyMessage = '';
    if (pregnancyStatus === '6-9') {
      safetyMessage = '⚠️ HS-BQ and Deworming BLOCKED during pregnancy month 6-9';
    } else if (pregnancyStatus === '1-5') {
      safetyMessage = '✅ All treatments allowed during pregnancy month 1-5';
    } else {
      safetyMessage = '✅ Normal schedule - no pregnancy restrictions';
    }
    
    const resultDiv = document.getElementById('scheduleResult');
    resultDiv.innerHTML = `
      <div class="p-4 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl">
        <h4 class="font-bold text-gray-900 dark:text-white mb-3">Generated Annual Schedule</h4>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="p-3 bg-white dark:bg-gray-800 rounded-lg">
            <div class="font-semibold text-blue-600 dark:text-blue-400">HS-BQ Vaccine</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Annual (Pre-monsoon)</div>
            <div class="font-medium mt-1">${hsbqDate}</div>
          </div>
          <div class="p-3 bg-white dark:bg-gray-800 rounded-lg">
            <div class="font-semibold text-green-600 dark:text-green-400">FMD Vaccine</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Every 6 months</div>
            <div class="font-medium mt-1">2 doses per year</div>
          </div>
          <div class="p-3 bg-white dark:bg-gray-800 rounded-lg">
            <div class="font-semibold text-purple-600 dark:text-purple-400">Deworming</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Every 120 days</div>
            <div class="font-medium mt-1">3-4 times per year</div>
          </div>
        </div>
        <div class="mt-4 p-3 bg-white dark:bg-gray-800 rounded-lg">
          <div class="text-sm font-semibold text-gray-900 dark:text-white mb-1">Total Annual Requirements:</div>
          <div class="text-lg font-bold text-gray-900 dark:text-white">3 Vaccinations per year</div>
          <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">${safetyMessage}</div>
        </div>
      </div>
    `;
    resultDiv.classList.remove('hidden');
  }
  
  function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 px-6 py-3 rounded-xl shadow-xl z-50 animate-fade-in ${
