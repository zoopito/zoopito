<% layout("layouts/boilerplate") %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 px-4 py-6 sm:px-6 lg:px-8">

  <!-- Header Section -->
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-8 gap-4">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <div class="p-2 rounded-xl bg-gradient-to-r from-green-500 to-emerald-600">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
              Vaccination & Deworming Management
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">
              Automated veterinary assistant following Maharashtra cattle health protocols
            </p>
          </div>
        </div>
        
        <!-- System Summary -->
        <div class="flex flex-wrap gap-4 mt-4">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-green-500 animate-pulse"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              System Philosophy: <span class="font-semibold text-gray-900 dark:text-white">Digital Veterinary Assistant</span>
            </span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-blue-500"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              Total Vaccinations/Year: <span class="font-semibold text-gray-900 dark:text-white">3 per animal</span>
            </span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              Pregnancy Safety: <span class="font-semibold text-gray-900 dark:text-white">Auto-controlled</span>
            </span>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="flex flex-wrap gap-2">
        <button onclick="markAllCompleted()"
                class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-medium rounded-xl hover:from-green-600 hover:to-emerald-600 transition-all transform hover:scale-105 shadow-lg shadow-green-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Mark All Done
        </button>
        
        <a href="/vaccination/calendar"
           class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105 shadow-lg shadow-blue-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          View Calendar
        </a>
        
        <button onclick="showSystemRules()"
                class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium rounded-xl hover:from-purple-600 hover:to-pink-600 transition-all transform hover:scale-105 shadow-lg shadow-purple-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          System Rules
        </button>
      </div>
    </div>

    <!-- Filters Section -->
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6 mb-6">
      <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
        <div class="flex-1 max-w-2xl">
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <input type="text" 
                   placeholder="Search by animal ID, farmer name, village..." 
                   class="w-full pl-10 pr-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:bg-white dark:focus:bg-gray-800 transition-colors"
                   id="searchInput">
          </div>
        </div>
        
        <div class="flex flex-wrap gap-2">
          <select id="statusFilter" class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
            <option value="">All Status</option>
            <option value="today">Today's Tasks</option>
            <option value="week">This Week</option>
            <option value="upcoming">Upcoming (7-14 days)</option>
            <option value="overdue">Overdue</option>
            <option value="blocked">Blocked (Pregnancy)</option>
          </select>
          
          <select id="vaccineFilter" class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
            <option value="">All Treatments</option>
            <option value="fmd">FMD Vaccine</option>
            <option value="hsbq">HS-BQ Vaccine</option>
            <option value="deworming">Deworming</option>
          </select>
          
          <select id="animalTypeFilter" class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
            <option value="">All Animals</option>
            <option value="cow">Cow</option>
            <option value="buffalo">Buffalo</option>
            <option value="pregnant">Pregnant Animals</option>
          </select>
          
          <button onclick="clearFilters()" 
                  class="px-4 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
            Clear Filters
          </button>
        </div>
      </div>
    </div>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mb-6">
      <!-- Today's Tasks -->
      <div class="bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 border border-blue-200 dark:border-blue-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Today's Tasks</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2">12</h3>
          </div>
          <div class="p-3 rounded-full bg-blue-100 dark:bg-blue-900/30">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href="#" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">
            View schedule →
          </a>
        </div>
      </div>

      <!-- This Week -->
      <div class="bg-gradient-to-r from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 border border-green-200 dark:border-green-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">This Week</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2">47</h3>
          </div>
          <div class="p-3 rounded-full bg-green-100 dark:bg-green-900/30">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <div class="text-xs text-gray-500 dark:text-gray-400">Includes: 28 FMD, 12 HS-BQ, 7 Deworming</div>
        </div>
      </div>

      <!-- Blocked (Pregnancy) -->
      <div class="bg-gradient-to-r from-yellow-50 to-amber-100 dark:from-yellow-900/20 dark:to-amber-800/20 border border-yellow-200 dark:border-amber-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Blocked (Pregnancy)</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2">8</h3>
          </div>
          <div class="p-3 rounded-full bg-yellow-100 dark:bg-yellow-900/30">
            <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.732 0L4.07 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <div class="text-xs text-yellow-600 dark:text-yellow-400">Safety protocol active</div>
        </div>
      </div>

      <!-- Upcoming (7-14 days) -->
      <div class="bg-gradient-to-r from-purple-50 to-pink-100 dark:from-purple-900/20 dark:to-pink-800/20 border border-purple-200 dark:border-pink-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Upcoming (7-14d)</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2">36</h3>
          </div>
          <div class="p-3 rounded-full bg-purple-100 dark:bg-purple-900/30">
            <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href="#" class="text-sm text-purple-600 dark:text-purple-400 hover:underline">
            Plan ahead →
          </a>
        </div>
      </div>
    </div>

    <!-- Tabs Navigation -->
    <div class="mb-6">
      <div class="border-b border-gray-200 dark:border-gray-700">
        <nav class="-mb-px flex space-x-8">
          <button id="tab-today" class="tab-button border-b-2 border-blue-500 text-blue-600 dark:text-blue-400 px-1 py-4 text-sm font-medium">
            Today's Tasks
          </button>
          <button id="tab-week" class="tab-button border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 px-1 py-4 text-sm font-medium">
            This Week
          </button>
          <button id="tab-upcoming" class="tab-button border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 px-1 py-4 text-sm font-medium">
            Upcoming (7-14 days)
          </button>
          <button id="tab-blocked" class="tab-button border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 px-1 py-4 text-sm font-medium">
            Blocked (Pregnancy)
          </button>
          <button id="tab-all" class="tab-button border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 px-1 py-4 text-sm font-medium">
            All Scheduled
          </button>
        </nav>
      </div>
    </div>

    <!-- Vaccination Tasks Table -->
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 overflow-hidden mb-8">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Animal Details
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Treatment
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Scheduled Date
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Status
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Pregnancy Safety
              </th>
              <th scope="col" class="px-6 py-4 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700" id="tasksTable">
            <!-- Tasks will be loaded here based on tab selection -->
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pregnancy Safety Dashboard -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Pregnancy Safety Rules -->
      <div class="bg-gradient-to-r from-pink-50 to-rose-50 dark:from-pink-900/20 dark:to-rose-900/20 rounded-2xl shadow-xl border border-pink-100 dark:border-pink-900/30 p-6">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
          Pregnancy Safety Rules (Auto-controlled)
        </h3>
        
        <div class="space-y-4">
          <div class="p-4 bg-white/50 dark:bg-gray-800/30 rounded-xl">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-8 h-8 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 dark:text-white">Deworming Rules</h4>
            </div>
            <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1 ml-11">
              <li>• Normal (Not Pregnant): Every 120 days</li>
              <li>• Pregnancy Month 1-5: Allowed</li>
              <li>• Pregnancy Month 6-9: <span class="text-red-600 dark:text-red-400 font-medium">BLOCKED</span> (miscarriage risk)</li>
              <li>• Post-calving: After 30 days</li>
            </ul>
          </div>

          <div class="p-4 bg-white/50 dark:bg-gray-800/30 rounded-xl">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-8 h-8 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 dark:text-white">HS-BQ Vaccine Rules</h4>
            </div>
            <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1 ml-11">
              <li>• Pregnancy Month 1-5: Allowed</li>
              <li>• Pregnancy Month 6-9: <span class="text-red-600 dark:text-red-400 font-medium">BLOCKED</span></li>
              <li>• Postponed to after calving (30 days)</li>
            </ul>
          </div>

          <div class="p-4 bg-white/50 dark:bg-gray-800/30 rounded-xl">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-8 h-8 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 dark:text-white">FMD Vaccine Rules</h4>
            </div>
            <p class="text-sm text-gray-600 dark:text-gray-400 ml-11">
              • Safe in pregnancy - <span class="text-green-600 dark:text-green-400 font-medium">No blocking required</span>
            </p>
          </div>
        </div>
      </div>

      <!-- Annual Vaccination Summary -->
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl shadow-xl border border-blue-100 dark:border-blue-900/30 p-6">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Annual Vaccination Summary
        </h3>
        
        <div class="space-y-4">
          <div class="text-center p-6 bg-white/50 dark:bg-gray-800/30 rounded-xl">
            <div class="text-5xl font-bold text-gray-900 dark:text-white mb-2">3</div>
            <div class="text-gray-600 dark:text-gray-400">Vaccinations per animal per year</div>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div class="text-center p-4 bg-white/50 dark:bg-gray-800/30 rounded-xl">
              <div class="text-2xl font-bold text-green-600 dark:text-green-400 mb-1">2</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">FMD doses/year</div>
              <div class="text-xs text-gray-500 dark:text-gray-500">Every 6 months</div>
            </div>
            
            <div class="text-center p-4 bg-white/50 dark:bg-gray-800/30 rounded-xl">
              <div class="text-2xl font-bold text-blue-600 dark:text-blue-400 mb-1">1</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">HS-BQ dose/year</div>
              <div class="text-xs text-gray-500 dark:text-gray-500">Pre-monsoon (May-June)</div>
            </div>
          </div>
          
          <div class="p-4 bg-white/50 dark:bg-gray-800/30 rounded-xl">
            <h4 class="font-semibold text-gray-900 dark:text-white mb-2">HS-BQ Seasonal Timing</h4>
            <div class="text-sm text-gray-600 dark:text-gray-400">
              <div class="mb-2">Registration Month → Vaccination Date:</div>
              <div class="grid grid-cols-2 gap-2 text-xs">
                <span class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Jan-Apr</span>
                <span class="bg-blue-100 dark:bg-blue-900/30 px-2 py-1 rounded">June (same year)</span>
                <span class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">May-Jun</span>
                <span class="bg-blue-100 dark:bg-blue-900/30 px-2 py-1 rounded">Nearest May-Jun date</span>
                <span class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">Jul-Dec</span>
                <span class="bg-blue-100 dark:bg-blue-900/30 px-2 py-1 rounded">June (next year)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Auto Schedule Generator -->
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6 mb-8">
      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        Automatic Schedule Generator
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Animal Type</label>
          <select id="animalTypeSelect" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800">
            <option value="cow">Cow</option>
            <option value="buffalo">Buffalo</option>
          </select>
        </div>
        
        <div class="p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Registration Month</label>
          <select id="regMonthSelect" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800">
            <option value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
