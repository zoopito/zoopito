<% layout("layouts/boilerplate") %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 px-4 py-6 sm:px-6 lg:px-8">

  <!-- Header Section -->
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-8 gap-4">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <div class="p-2 rounded-xl bg-gradient-to-r from-green-500 to-emerald-600">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
              Vaccination & Deworming Management
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-1">
              Digital Veterinary Assistant - <%= farmName || 'Farm Management System' %>
            </p>
          </div>
        </div>
        
        <!-- System Summary -->
        <div class="flex flex-wrap gap-4 mt-4">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-green-500 animate-pulse"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              Active Animals: <span class="font-semibold text-gray-900 dark:text-white"><%= stats?.totalAnimals || 0 %></span>
            </span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-blue-500"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              Today's Tasks: <span class="font-semibold text-gray-900 dark:text-white"><%= stats?.todayTasks || 0 %></span>
            </span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              Pregnancy Safety: <span class="font-semibold text-gray-900 dark:text-white"><%= stats?.pregnantAnimals || 0 %> animals</span>
            </span>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="flex flex-wrap gap-2">
        <a href="/vaccines/new"
           class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105 shadow-lg shadow-blue-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          New Vaccine
        </a>
        <a href="/vaccines"
           class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105 shadow-lg shadow-blue-500/25">
          
          See All Vaccines
        </a>
        <a href="/vaccination/new"
           class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105 shadow-lg shadow-blue-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          New Vaccination
        </a>
        
        <a href="/vaccines/calendar"
           class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium rounded-xl hover:from-purple-600 hover:to-pink-600 transition-all transform hover:scale-105 shadow-lg shadow-purple-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          View Calendar
        </a>
        
        <button onclick="showSystemRules()"
                class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-medium rounded-xl hover:from-green-600 hover:to-emerald-600 transition-all transform hover:scale-105 shadow-lg shadow-green-500/25">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          System Rules
        </button>
      </div>
    </div>

    <!-- Filters Section -->
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6 mb-6">
      <form method="GET" action="/vaccinaes" class="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
        <div class="flex-1 max-w-2xl">
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <input type="text" 
                   name="search"
                   placeholder="Search by animal ID, farmer name, village..." 
                   class="w-full pl-10 pr-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:bg-white dark:focus:bg-gray-800 transition-colors"
                   value="<%= search || '' %>">
          </div>
        </div>
        
        <div class="flex flex-wrap gap-2">
          <select name="status" class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
            <option value="">All Status</option>
            <option value="today" <%= status === 'today' ? 'selected' : '' %>>Today's Tasks</option>
            <option value="week" <%= status === 'week' ? 'selected' : '' %>>This Week</option>
            <option value="upcoming" <%= status === 'upcoming' ? 'selected' : '' %>>Upcoming (7-14 days)</option>
            <option value="overdue" <%= status === 'overdue' ? 'selected' : '' %>>Overdue</option>
            <option value="blocked" <%= status === 'blocked' ? 'selected' : '' %>>Blocked (Pregnancy)</option>
            <option value="completed" <%= status === 'completed' ? 'selected' : '' %>>Completed</option>
          </select>
          
          <select name="vaccineType" class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
            <option value="">All Treatments</option>
            <% vaccineTypes.forEach(type => { %>
              <option value="<%= type._id %>" <%= vaccineType === type._id.toString() ? 'selected' : '' %>>
                <%= type.name %>
              </option>
            <% }); %>
          </select>
          
          <select name="animalType" class="px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 rounded-xl text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500">
            <option value="">All Animals</option>
            <option value="Cow" <%= animalType === 'Cow' ? 'selected' : '' %>>Cow</option>
            <option value="Buffalo" <%= animalType === 'Buffalo' ? 'selected' : '' %>>Buffalo</option>
            <option value="Goat" <%= animalType === 'Goat' ? 'selected' : '' %>>Goat</option>
            <option value="Sheep" <%= animalType === 'Sheep' ? 'selected' : '' %>>Sheep</option>
            <option value="pregnant" <%= animalType === 'pregnant' ? 'selected' : '' %>>Pregnant Animals</option>
          </select>
          
          <button type="submit" 
                  class="px-4 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-colors">
            Filter
          </button>
          
          <a href="/admin/vaccinations" 
             class="px-4 py-3 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
            Clear
          </a>
        </div>
      </form>
    </div>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mb-6">
      <!-- Today's Tasks -->
      <div class="bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 border border-blue-200 dark:border-blue-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Today's Tasks</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2"><%= stats?.todayTasks || 0 %></h3>
          </div>
          <div class="p-3 rounded-full bg-blue-100 dark:bg-blue-900/30">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href="?status=today" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">
            View schedule →
          </a>
        </div>
      </div>

      <!-- This Week -->
      <div class="bg-gradient-to-r from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 border border-green-200 dark:border-green-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">This Week</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2"><%= stats?.weekTasks || 0 %></h3>
          </div>
          <div class="p-3 rounded-full bg-green-100 dark:bg-green-900/30">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href="?status=week" class="text-sm text-green-600 dark:text-green-400 hover:underline">
            View this week →
          </a>
        </div>
      </div>

      <!-- Blocked (Pregnancy) -->
      <div class="bg-gradient-to-r from-yellow-50 to-amber-100 dark:from-yellow-900/20 dark:to-amber-800/20 border border-yellow-200 dark:border-amber-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Blocked (Pregnancy)</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2"><%= stats?.blockedTasks || 0 %></h3>
          </div>
          <div class="p-3 rounded-full bg-yellow-100 dark:bg-yellow-900/30">
            <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.732 0L4.07 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href="?status=blocked&animalType=pregnant" class="text-sm text-yellow-600 dark:text-yellow-400 hover:underline">
            View details →
          </a>
        </div>
      </div>

      <!-- Upcoming (7-14 days) -->
      <div class="bg-gradient-to-r from-purple-50 to-pink-100 dark:from-purple-900/20 dark:to-pink-800/20 border border-purple-200 dark:border-pink-700/30 rounded-2xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Upcoming (7-14d)</p>
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mt-2"><%= stats?.upcomingTasks || 0 %></h3>
          </div>
          <div class="p-3 rounded-full bg-purple-100 dark:bg-purple-900/30">
            <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <div class="mt-4">
          <a href="?status=upcoming" class="text-sm text-purple-600 dark:text-purple-400 hover:underline">
            Plan ahead →
          </a>
        </div>
      </div>
    </div>

    <!-- Vaccination Tasks Table -->
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 overflow-hidden mb-8">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Animal Details
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Treatment
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Scheduled Date
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Status
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Pregnancy Safety
              </th>
              <th scope="col" class="px-6 py-4 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            <% if (vaccinations && vaccinations.length > 0) { %>
              <% vaccinations.forEach(vaccination => { %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                  <td class="px-6 py-4">
                    <div>
                      <% if (vaccination.animal) { %>
                        <div class="font-medium text-gray-900 dark:text-white">
                          <%= vaccination.animal.name %> (<%= vaccination.animal.tagId || vaccination.animal._id %>)
                        </div>
                        <% if (vaccination.farmer) { %>
                          <div class="text-sm text-gray-500 dark:text-gray-400">
                            Farmer: <%= vaccination.farmer.name %> • <%= vaccination.farmer.village %>
                          </div>
                        <% } %>
                        <span class="inline-flex items-center px-2 py-1 mt-1 text-xs font-medium rounded-full 
                          <%= vaccination.animal.species === 'Cow' ? 'bg-pink-100 text-pink-800 dark:bg-pink-900/30 dark:text-pink-300' :
                             vaccination.animal.species === 'Buffalo' ? 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' :
                             vaccination.animal.species === 'Goat' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300' :
                             'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300' %>">
                          <%= vaccination.animal.species %>
                          <% if (vaccination.animal.gender === 'Female') { %>
                            <span class="ml-1">♀</span>
                          <% } else if (vaccination.animal.gender === 'Male') { %>
                            <span class="ml-1">♂</span>
                          <% } %>
                        </span>
                      <% } else { %>
                        <div class="text-gray-400 italic">Animal data not found</div>
                      <% } %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <% if (vaccination.vaccine) { %>
                      <div class="font-medium text-gray-900 dark:text-white">
                        <%= vaccination.vaccine.name %>
                      </div>
                      <div class="text-sm text-gray-500 dark:text-gray-400">
                        <%= vaccination.vaccine.brand %>
                        <% if (vaccination.doseNumber && vaccination.totalDosesRequired) { %>
                          • Dose <%= vaccination.doseNumber %>/<%= vaccination.totalDosesRequired %>
                        <% } %>
                      </div>
                    <% } else { %>
                      <div class="text-gray-400 italic">Vaccine data not found</div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="font-medium text-gray-900 dark:text-white">
                      <%= new Date(vaccination.dateAdministered).toLocaleDateString('en-IN', { 
                        day: 'numeric', 
                        month: 'short', 
                        year: 'numeric' 
                      }) %>
                    </div>
                    <% if (vaccination.nextDueDate) { %>
                      <div class="text-sm text-gray-500 dark:text-gray-400">
                        Next due: <%= new Date(vaccination.nextDueDate).toLocaleDateString('en-IN', { 
                          day: 'numeric', 
                          month: 'short' 
                        }) %>
                      </div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                      <%= vaccination.status === 'Completed' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' :
                         vaccination.status === 'Pending' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300' :
                         vaccination.status === 'Overdue' ? 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300' :
                         vaccination.status === 'Blocked' ? 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300' :
                         'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' %>">
                      <%= vaccination.status %>
                      <% if (vaccination.verificationStatus === 'Verified') { %>
                        <svg class="w-3 h-3 ml-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                      <% } %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <% if (vaccination.animal && vaccination.animal.isPregnant) { %>
                      <% 
                        const vaccineName = vaccination.vaccine ? vaccination.vaccine.name.toLowerCase() : '';
                        const isBlocked = (vaccination.animal.pregnancyMonth && vaccination.animal.pregnancyMonth >= 6) &&
                                         (vaccineName.includes('hs') || vaccineName.includes('bq') || 
                                          vaccination.vaccine.diseaseTarget?.toLowerCase().includes('deworming'));
                      %>
                      <div class="text-sm <%= isBlocked ? 'text-red-600 dark:text-red-400 font-semibold' : 'text-green-600 dark:text-green-400' %>">
                        <% if (isBlocked) { %>
                          BLOCKED (Pregnancy Month <%= vaccination.animal.pregnancyMonth %>)
                        <% } else if (vaccination.animal.pregnancyMonth) { %>
                          Pregnant (Month <%= vaccination.animal.pregnancyMonth %>) - Allowed
                        <% } else { %>
                          Pregnant - Check safety
                        <% } %>
                      </div>
                    <% } else { %>
                      <div class="text-sm text-green-600 dark:text-green-400">
                        Safe
                      </div>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex justify-end space-x-2">
                      <% if (vaccination.status !== 'Completed' && vaccination.status !== 'Blocked') { %>
                        <form action="/vaccination/<%= vaccination._id %>/complete" method="POST" class="inline">
                          <input type="hidden" name="_method" value="PUT">
                          <button type="submit" onclick="return confirm('Mark this vaccination as completed?')"
                                  class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-300">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Mark Done
                          </button>
                        </form>
                      <% } %>
                      
                      <a href="/vaccination/<%= vaccination._id %>"
                         class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
                        View
                      </a>
                      
                      <% if (user && user.role === 'admin') { %>
                        <form action="/vaccination/<%= vaccination._id %>" method="POST" class="inline" onsubmit="return confirm('Delete this vaccination record?')">
                          <input type="hidden" name="_method" value="DELETE">
                          <button type="submit" 
                                  class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300">
                            Delete
                          </button>
                        </form>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                  <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <p class="text-lg font-medium">No vaccination records found</p>
                  <p class="text-sm mt-1">
                    <% if (search || status || vaccineType || animalType) { %>
                      Try changing your filters
                    <% } else { %>
                      <a href="/vaccination/new" class="text-blue-600 dark:text-blue-400 hover:underline">
                        Add your first vaccination record
                      </a>
                    <% } %>
                  </p>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-700 dark:text-gray-400">
              Showing <span class="font-medium"><%= startIndex + 1 %></span> to 
              <span class="font-medium"><%= Math.min(startIndex + limit, total) %></span> of 
              <span class="font-medium"><%= total %></span> results
            </div>
            <div class="flex space-x-2">
              <% if (page > 1) { %>
                <a href="?page=<%= page - 1 %><%= queryString %>" 
