<script>
  // Modal functions
  function showSystemRules() {
    document.getElementById('systemRulesModal').classList.remove('hidden');
  }
  
  function closeSystemRules() {
    document.getElementById('systemRulesModal').classList.add('hidden');
  }
  
  // Auto-schedule generator
  function generateAutoSchedule() {
    const animalId = prompt('Enter Animal ID to generate schedule:');
    if (animalId) {
      fetch(`/api/animals/${animalId}/generate-schedule`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Annual schedule generated successfully!');
          location.reload();
        } else {
          alert('Error: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error generating schedule');
      });
    }
  }

  // Close modal on backdrop click
  document.getElementById('systemRulesModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeSystemRules();
    }
  });

  // Filter functionality
  document.querySelectorAll('select[name], input[name]').forEach(element => {
    element.addEventListener('change', function() {
      // Auto-submit form on filter change
      if (this.closest('form')) {
        this.closest('form').submit();
      }
    });
  });
</script>

