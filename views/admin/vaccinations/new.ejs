<script>
    // Toggle password visibility (reusing from login)
    function toggleSection(section) {
        const sectionEl = document.getElementById(section + 'Section');
        const iconEl = document.getElementById(section + 'Icon');
        
        if (sectionEl && iconEl) {
            if (sectionEl.style.display === 'none') {
                sectionEl.style.display = 'block';
                iconEl.style.transform = 'rotate(0deg)';
            } else {
                sectionEl.style.display = 'none';
                iconEl.style.transform = 'rotate(-90deg)';
            }
        }
    }

    $(document).ready(function() {
        // Initialize sections as visible
        $('#animalConditionSection, #reactionsSection').show();

        // Show/hide reaction details
        $('#hadAdverseReaction').on('change', function() {
            if (this.checked) {
                $('#reactionDetails').slideDown();
            } else {
                $('#reactionDetails').slideUp();
            }
        });

        // When vaccine is selected
        $('#vaccine').on('change', function() {
            const selected = $(this).find('option:selected');
            const vaccineName = selected.data('name');
            const vaccineType = selected.data('type');
            const dueMonths = selected.data('due-months');
            
            $('#vaccineName').val(vaccineName);
            $('#vaccineType').val(vaccineType);
            
            // Auto-calculate next due date if empty
            if (!$('#nextDueDate').val()) {
                const adminDate = $('#dateAdministered').val();
                if (adminDate) {
                    $.post('/admin/vaccinations/calculate-next-due', {
                        vaccineId: $(this).val(),
                        dateAdministered: adminDate
                    })
                    .done(function(response) {
                        if (response.success) {
                            $('#nextDueDate').val(response.nextDueDate);
                        }
                    });
                }
            }
        });

        // When date administered changes
        $('#dateAdministered').on('change', function() {
            const vaccineId = $('#vaccine').val();
            if (vaccineId && !$('#nextDueDate').val()) {
                $.post('/admin/vaccinations/calculate-next-due', {
                    vaccineId: vaccineId,
                    dateAdministered: $(this).val()
                })
                .done(function(response) {
                    if (response.success) {
                        $('#nextDueDate').val(response.nextDueDate);
                    }
                });
            }
        });

        // Filter animals by farmer
        $('#farmer').on('change', function() {
            const farmerId = $(this).val();
            if (farmerId) {
                $.get(`/admin/vaccinations/api/farmers/${farmerId}/animals`)
                    .done(function(response) {
                        if (response.success) {
                            const animalSelect = $('#animal');
                            animalSelect.empty().append('<option value="">Select Animal</option>');
                            response.animals.forEach(animal => {
                                animalSelect.append(`<option value="${animal._id}">${animal.name} (${animal.tagId}) - ${animal.species}</option>`);
                            });
                        }
                    });
            }
        });

        // Form submission handling
        $('#vaccinationForm').on('submit', function(e) {
            e.preventDefault();
            
            const form = $(this);
            const submitButton = $('#submitButton');
            const buttonText = $('#buttonText');
            const loadingSpinner = $('#loadingSpinner');
            
            // Validate required fields
            const farmer = $('#farmer').val();
            const animal = $('#animal').val();
            const vaccine = $('#vaccine').val();
            const dateAdministered = $('#dateAdministered').val();
            const administeredBy = $('#administeredBy').val();
            
            if (!farmer || !animal || !vaccine || !dateAdministered || !administeredBy) {
                showError('Please fill in all required fields');
                return;
            }
            
            // Show loading state
            buttonText.addClass('hidden');
            loadingSpinner.removeClass('hidden');
            submitButton.prop('disabled', true);
            
            // Submit the form
            this.submit();
        });
    });

    function showError(message) {
        const alertDiv = document.createElement('div');
        alertDiv.className = 'fixed top-4 right-4 z-50 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4 shadow-lg';
        alertDiv.innerHTML = `
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-red-500 mr-3"></i>
                <p class="text-sm text-red-700 dark:text-red-300">${message}</p>
            </div>
        `;
        
        document.body.appendChild(alertDiv);
        
        setTimeout(() => {
            alertDiv.remove();
        }, 5000);
    }
</script>

