<% layout("layouts/boilerplate") %>

<div class="max-w-7xl mx-auto space-y-6">

  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="text-center sm:text-left">
      <h1 class="text-2xl font-bold text-gray-800 dark:text-white">
        Farmers Management
      </h1>
      <p class="text-sm text-gray-500">
        Total Farmers: <span class="font-semibold"><%= totalCount %></span>
      </p>
    </div>

    <!-- Actions -->
    <div class="flex justify-center sm:justify-end">
      <% if(currUser.role === 'ADMIN'){ %>
      <a
        href="/admin/farmers/new"
        class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 shadow">
        + Add New Farmer
      </a>
      <% }else if(currUser.role === 'SALES'){ %>
      <a
        href="/sales/farmers/new"
        class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 shadow">
        + Add New Farmer  
      </a>
      <% } %>
    </div>
  </div>

  <!-- Table Wrapper -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow border border-gray-200 dark:border-gray-700 overflow-hidden">

    <div class="overflow-x-auto">
      <table class="min-w-full text-sm text-center">
        <thead class="bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-200">
          <tr>
            <th class="px-4 py-3 font-semibold">Farmer Name</th>
            <th class="px-4 py-3 font-semibold hidden md:table-cell">Email</th>
            <th class="px-4 py-3 font-semibold hidden md:table-cell">Mobile</th>
            <th class="px-4 py-3 font-semibold">Registered On</th>
            <th class="px-4 py-3 font-semibold">Action</th>
          </tr>
        </thead>

        <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
          <% if (farmers.length === 0) { %>
            <tr>
              <td colspan="5" class="py-8 text-gray-500 text-center">
                No farmers found
              </td>
            </tr>
          <% } %>

          <% farmers.forEach(farmer => { %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition">
              <td class="px-4 py-3 font-medium text-gray-800 dark:text-white">
                <%= farmer.name || "N/A" %>
              </td>

              <td class="px-4 py-3 hidden md:table-cell">
                <%= farmer.uniqueFarmerId || "-" %>
              </td>

              <td class="px-4 py-3 hidden md:table-cell">
                <%= farmer.mobileNumber || "-" %>
              </td>

              <td class="px-4 py-3">
                <%= new Date(farmer.createdAt).toLocaleDateString("en-IN") %>
              </td>

              <td class="px-4 py-3">
                <% if(currUser.role === 'ADMIN') { %>
                <a
                  href="/admin/farmers/<%= farmer._id %>"
                  class="inline-block px-3 py-1 text-xs rounded-md bg-blue-600 text-white hover:bg-blue-700">
                  View
                </a>
                <% } else { %>
                <a
                  href="/sales/farmers/<%= farmer._id %>"
                  class="inline-block px-3 py-1 text-xs rounded-md bg-blue-600 text-white hover:bg-blue-700">
                  View  
              </a>
              <% } %>
            </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">

      <p class="text-sm text-gray-500 text-center sm:text-left">
        Page <%= currentPage %> of <%= totalPages %>
      </p>

      <div class="flex justify-center flex-wrap gap-2">

        <% if (currentPage > 1) { %>
          <a href="?page=1"
            class="px-3 py-1 border rounded-md text-sm hover:bg-gray-100 dark:hover:bg-gray-700">
            First
          </a>

          <a href="?page=<%= currentPage - 1 %>"
            class="px-3 py-1 border rounded-md text-sm hover:bg-gray-100 dark:hover:bg-gray-700">
            Prev
          </a>
        <% } %>

        <% 
          const start = Math.max(currentPage - 2, 1);
          const end = Math.min(currentPage + 2, totalPages);
        %>

        <% for (let i = start; i <= end; i++) { %>
          <a
            href="?page=<%= i %>"
            class="px-3 py-1 rounded-md text-sm
            <%= i === currentPage
              ? 'bg-blue-600 text-white'
              : 'border hover:bg-gray-100 dark:hover:bg-gray-700' %>">
            <%= i %>
          </a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="?page=<%= currentPage + 1 %>"
            class="px-3 py-1 border rounded-md text-sm hover:bg-gray-100 dark:hover:bg-gray-700">
            Next
          </a>

          <a href="?page=<%= totalPages %>"
            class="px-3 py-1 border rounded-md text-sm hover:bg-gray-100 dark:hover:bg-gray-700">
            Last
          </a>
        <% } %>

      </div>
    </div>
  <% } %>

</div>
