          <% startPage = Math.max(1, endPage - maxVisible + 1); %>
        <% } %>

        <% if (startPage > 1) { %>
          <a href="?page=1<%= searchQuery ? '&search=' + searchQuery : '' %><%= filterStatus ? '&status=' + filterStatus : '' %>" class="px-3 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">1</a>
