<!-- JavaScript -->
<script>
  // Bulk Upload Modal
  function openBulkUpload() {
    document.getElementById('bulkUploadModal').classList.remove('hidden');
  }
  
  function closeBulkUpload() {
    document.getElementById('bulkUploadModal').classList.add('hidden');
  }
  
  function processBulkUpload() {
    const fileInput = document.getElementById('fileInput');
    if (!fileInput.files.length) {
      alert('Please select a file first.');
      return;
    }
    
    const file = fileInput.files[0];
    if (!['.csv', '.xlsx', '.xls'].some(ext => file.name.toLowerCase().endsWith(ext))) {
      alert('Please upload a CSV or Excel file.');
      return;
    }
    
    // Show loading state
    const processBtn = document.querySelector('#bulkUploadModal button:last-child');
    const originalText = processBtn.textContent;
    processBtn.textContent = 'Processing...';
    processBtn.disabled = true;
    
    // Simulate upload process
    setTimeout(() => {
      alert('Bulk upload processed successfully!');
      closeBulkUpload();
      processBtn.textContent = originalText;
      processBtn.disabled = false;
      fileInput.value = '';
    }, 2000);
  }

  // Dropdown menus for action buttons
  document.addEventListener('DOMContentLoaded', function() {
    // Close all dropdowns when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.member-actions-btn') && !e.target.closest('.member-dropdown')) {
        document.querySelectorAll('.member-dropdown').forEach(dropdown => {
          dropdown.classList.add('hidden');
        });
      }
    });

    // Toggle dropdowns
    document.querySelectorAll('.member-actions-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.stopPropagation();
        const memberId = this.getAttribute('data-id');
        const dropdown = document.getElementById(`dropdown-${memberId}`);
        dropdown.classList.toggle('hidden');
        dropdown.classList.add('member-dropdown');
      });
    });
  });

  function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 px-6 py-3 rounded-xl shadow-xl z-50 animate-fade-in ${
      type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
    }`;
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span>${message}</span>
      </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.remove();
    }, 3000);
  }

  // Prevent modal close on backdrop click
  document.getElementById('bulkUploadModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeBulkUpload();
    }
  });
</script>


