<script>
  // Toggle pregnancy details
  document.getElementById('isPregnant').addEventListener('change', function() {
    const details = document.getElementById('pregnancyDetails');
    if (this.checked) {
      details.classList.remove('hidden');
    } else {
      details.classList.add('hidden');
    }
  });

  // Toggle lactation details
  document.getElementById('isLactating').addEventListener('change', function() {
    const details = document.getElementById('lactationDetails');
    if (this.checked) {
      details.classList.remove('hidden');
    } else {
      details.classList.add('hidden');
    }
  });

  // Toggle vaccination details
  document.getElementById('isVaccinated').addEventListener('change', function() {
    const details = document.getElementById('vaccinationDetails');
    if (this.checked) {
      details.classList.remove('hidden');
    } else {
      details.classList.add('hidden');
    }
  });

  // Update body condition score display
  const scoreSlider = document.getElementById('bodyConditionScore');
  const scoreValue = document.getElementById('scoreValue');
  
  scoreSlider.addEventListener('input', function() {
    scoreValue.textContent = this.value;
  });

  // Auto-calculate expected delivery date based on pregnancy confirmation
  document.getElementById('pregnancyConfirmedDate').addEventListener('change', function() {
    const confirmedDate = new Date(this.value);
    const expectedDate = document.getElementById('expectedDeliveryDate');
    
    if (confirmedDate && !isNaN(confirmedDate.getTime())) {
      // Assuming average gestation period (modify based on animal type)
      const gestationDays = 283; // Average for cows
      const expectedDelivery = new Date(confirmedDate);
      expectedDelivery.setDate(expectedDelivery.getDate() + gestationDays);
      
      const formattedDate = expectedDelivery.toISOString().split('T')[0];
      expectedDate.value = formattedDate;
    }
  });

  // Set default dates
  window.addEventListener('DOMContentLoaded', function() {
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('pregnancyTestDate').value = today;
    document.getElementById('lastVaccinationDate').value = today;
    
    // Set next vaccination date to 6 months from today
    const nextVaccination = new Date();
    nextVaccination.setMonth(nextVaccination.getMonth() + 6);
    document.getElementById('nextVaccinationDate').value = nextVaccination.toISOString().split('T')[0];
  });
</script>