<% layout("layouts/boilerplate") %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 px-4 py-6 sm:px-6 lg:px-8">

  <!-- Header with Actions -->
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-8 gap-4">
      <!-- Page Title -->
      <div class="flex-1">
        <div class="flex items-center gap-3">
          <a href="/<%= currUser && currUser.role ? currUser.role.toLowerCase() : '' %>/animals" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-shadow">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          </a>
          <div>
            <div class="flex items-center gap-2 flex-wrap">
              <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
                Animal Details
              </h1>
              <span class="px-3 py-1 text-xs font-bold rounded-full bg-gradient-to-r from-blue-500 to-purple-500 text-white">
                <%= animal.uniqueAnimalId %>
              </span>
              <span class="px-2 py-1 text-xs rounded-full <%= animal.isActive ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300' %>">
                <%= animal.isActive ? 'Active' : 'Inactive' %>
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-400 mt-1">
              Complete profile for <span class="font-semibold text-gray-900 dark:text-white"><%= animal.name || "Unnamed" %></span>
              <% if (animal.tagNumber) { %>
                â€¢ Tag: <%= animal.tagNumber %>
              <% } %>
            </p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-2">
        <a href="/<%= currUser && currUser.role ? currUser.role.toLowerCase() : '' %>/animals/<%= animal._id %>/edit" 
           class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105 shadow-lg shadow-blue-500/25">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit Animal
        </a>
        
        <% if (animal.isActive) { %>
          <form action="/<%= currUser && currUser.role ? currUser.role.toLowerCase() : '' %>/animal/<%= animal._id %>/deactivate" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to deactivate this animal?')">
            <button type="submit" 
                    class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-yellow-500 to-orange-500 text-white font-medium rounded-xl hover:from-yellow-600 hover:to-orange-600 transition-all transform hover:scale-105 shadow-lg shadow-yellow-500/25">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Deactivate
            </button>
          </form>
        <% } else { %>
          <form action="/<%= currUser && currUser.role ? currUser.role.toLowerCase() : '' %>/animal/<%= animal._id %>/activate" method="POST" class="inline">
            <button type="submit" 
                    class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-medium rounded-xl hover:from-green-600 hover:to-emerald-600 transition-all transform hover:scale-105 shadow-lg shadow-green-500/25">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
              </svg>
              Activate
            </button>
          </form>
        <% } %>
      </div>
    </div>

    <!-- Status Indicators Row -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <!-- Health Status -->
      <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-xl shadow border border-gray-100/50 dark:border-gray-700/50 p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Health Status</p>
            <span class="px-2 py-1 text-xs font-medium rounded-full <%= helpers.getHealthColor(animal.healthStatus?.currentStatus || 'Healthy') %>">
              <%= animal.healthStatus?.currentStatus || 'Healthy' %>
            </span>
          </div>
          <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Pregnancy Status -->
      <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-xl shadow border border-gray-100/50 dark:border-gray-700/50 p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Pregnancy Status</p>
            <span class="px-2 py-1 text-xs font-medium rounded-full <%= animal.pregnancyStatus?.isPregnant ? 'bg-pink-100 text-pink-800 dark:bg-pink-900/30 dark:text-pink-300' : 'bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-300' %>">
              <%= animal.pregnancyStatus?.isPregnant ? 'Pregnant' : 'Not Pregnant' %>
            </span>
          </div>
          <div class="w-10 h-10 rounded-lg bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Lactation Status -->
      <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-xl shadow border border-gray-100/50 dark:border-gray-700/50 p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Lactation Status</p>
            <span class="px-2 py-1 text-xs font-medium rounded-full <%= animal.lactationStatus?.isLactating ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 'bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-300' %>">
              <%= animal.lactationStatus?.isLactating ? 'Lactating' : 'Not Lactating' %>
            </span>
          </div>
          <div class="w-10 h-10 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 10-9.78 2.096A4 4 0 003 15z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Vaccination Status -->
      <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-xl shadow border border-gray-100/50 dark:border-gray-700/50 p-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Vaccination Status</p>
            <span class="px-2 py-1 text-xs font-medium rounded-full <%= animal.vaccinationSummary?.isUpToDate ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300' %>">
              <%= animal.vaccinationSummary?.isUpToDate ? 'Up to Date' : 'Pending' %>
            </span>
          </div>
          <div class="w-10 h-10 rounded-lg bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Left Column: Photos & Basic Info -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Photo Gallery -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Photo Documentation
            </h3>
            <% const photoCount = animal.photos ? Object.values(animal.photos).filter(photo => photo?.url).length : 0; %>
            <div class="flex items-center gap-2">
              <span class="text-sm text-gray-600 dark:text-gray-400">
                <%= photoCount %>/4 photos
              </span>
              <a href="/<%= currUser && currUser.role ? currUser.role.toLowerCase() : '' %>/animal/<%= animal._id %>/photos/upload" 
                 class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Manage Photos
              </a>
            </div>
          </div>

          <div class="grid ">
            <% const sides = [
              { name: 'front', label: 'Front View'},
             // { name: 'left', label: 'Left Side', icon: 'â¬…ï¸' },
             // { name: 'right', label: 'Right Side', icon: 'âž¡ï¸' },
             // { name: 'back', label: 'Back View', icon: 'ðŸ“‹' }
            ]; %>
            
            <% sides.forEach(side => { %>
              <div class=" relative bg-gray-50 dark:bg-gray-700/50 rounded-xl overflow-hidden border-2 border-gray-200 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 transition-all duration-300">
                <% if (animal.photos[side.name]?.url) { %>
                  <img src="<%= animal.photos[side.name].url %>" 
                       alt="<%= side.label %>" 
                       class="w-full sm:h-60 md:h-80 lg:h-100 object-cover transition-transform duration-300 group-hover:scale-110">
                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300"></div>
                  <a href="<%= animal.photos[side.name].url %>" 
                     target="_blank" 
                     class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="bg-white/90 dark:bg-gray-800/90 p-3 rounded-full shadow-lg">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m0 0l3-3m-3 3l-3-3"/>
                      </svg>
                    </div>
                  </a>
                  <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-3">
                    <p class="text-white text-sm font-medium capitalize"><%= side.name %> View</p>
                    <% if (animal.photos[side.name]?.uploadedAt) { %>
                      <p class="text-white/80 text-xs">Uploaded <%= helpers.formatDate(animal.photos[side.name].uploadedAt) %></p>
                    <% } %>
                  </div>
                <% } else { %>
                  <div class="w-full h-48 flex flex-col items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800">
                    <span class="text-3xl mb-2"><%= side.icon %></span>
                    <p class="text-sm text-gray-500 dark:text-gray-400 text-center px-2"><%= side.label %></p>
                    <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">No photo</p>
                  </div>
                <% } %>
              </div>
            <% }) %>
          </div>
        </div>

        <!-- Animal Information Tabs -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 overflow-hidden">
          <!-- Tabs Header -->
          <div class="border-b border-gray-200 dark:border-gray-700">
            <nav class="flex overflow-x-auto">
              <button onclick="showTab('basic')" id="basic-tab" class="tab-button active px-6 py-4 font-medium text-sm border-b-2 border-blue-500 text-blue-600 dark:text-blue-400 whitespace-nowrap">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Basic Info
              </button>
              <button onclick="showTab('health')" id="health-tab" class="tab-button px-6 py-4 font-medium text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-300 whitespace-nowrap">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Health & Medical
              </button>
              <button onclick="showTab('reproductive')" id="reproductive-tab" class="tab-button px-6 py-4 font-medium text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-300 whitespace-nowrap">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Reproductive
              </button>
              <button onclick="showTab('management')" id="management-tab" class="tab-button px-6 py-4 font-medium text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-300 whitespace-nowrap">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                Management
              </button>
            </nav>
          </div>

          <!-- Tab Content -->
          <div class="p-6">
            <!-- Basic Info Tab -->
            <div id="basic-tab-content" class="tab-content active">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Name</label>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= animal.name || "Unnamed" %></p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Animal Type</label>
                    <p class="text-gray-900 dark:text-white font-semibold">
                      <%= animal.animalType %>
                      <% if (animal.breed) { %>â€¢ <%= animal.breed %><% } %>
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Gender</label>
                    <p class="text-gray-900 dark:text-white font-semibold">
                      <%= animal.gender || "Unknown" %>
                      <% if (animal.gender === 'Female') { %>
                        <span class="text-pink-500 ml-1">â™€</span>
                      <% } else if (animal.gender === 'Male') { %>
                        <span class="text-blue-500 ml-1">â™‚</span>
                      <% } %>
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Age</label>
                    <p class="text-gray-900 dark:text-white font-semibold">
                      <% if (animal.age?.value) { %>
                        <%= animal.age.value %> <%= animal.age.unit %>
                      <% } else if (ageInMonths) { %>
                        <%= ageInMonths %> months (approx.)
                      <% } else { %>
                        N/A
                      <% } %>
                    </p>
                  </div>
                </div>
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Tag Number</label>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= animal.tagNumber || "N/A" %></p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Date of Birth</label>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= helpers.formatDate(animal.dateOfBirth) %></p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Source</label>
                    <p class="text-gray-900 dark:text-white font-semibold">
                      <%= animal.sourceOfAnimal ? animal.sourceOfAnimal.replace('_', ' ').toUpperCase() : 'N/A' %>
                      <% if (animal.purchaseDetails) { %>
                        <span class="text-sm text-gray-600 dark:text-gray-400 ml-2">
                          (<%= animal.purchaseDetails.currency %> <%= animal.purchaseDetails.price || '0' %>)
                        </span>
                      <% } %>
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Registration Date</label>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= helpers.formatDateTime(animal.createdAt) %></p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Health & Medical Tab -->
            <div id="health-tab-content" class="tab-content hidden">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Current Health Status</label>
                    <span class="px-3 py-1 rounded-full text-sm font-medium <%= helpers.getHealthColor(animal.healthStatus?.currentStatus || 'Healthy') %>">
                      <%= animal.healthStatus?.currentStatus || 'Healthy' %>
                    </span>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Body Condition Score</label>
                    <p class="text-gray-900 dark:text-white font-semibold">
                      <%= animal.healthStatus?.bodyConditionScore || 'N/A' %>/5
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Weight</label>
                    <p class="text-gray-900 dark:text-white font-semibold">
                      <% if (animal.healthStatus?.weight?.value) { %>
                        <%= animal.healthStatus.weight.value %> <%= animal.healthStatus.weight.unit %>
                      <% } else { %>
                        N/A
                      <% } %>
                    </p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Last Checkup</label>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= helpers.formatDate(animal.healthStatus?.lastCheckupDate) %></p>
                  </div>
                </div>
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Health Notes</label>
                    <p class="text-gray-900 dark:text-white"><%= animal.healthStatus?.healthNotes || 'No notes' %></p>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-1">Vaccination Status</label>
                    <div class="space-y-2">
                      <p class="text-gray-900 dark:text-white">
                        Last: <%= helpers.formatDate(animal.vaccinationSummary?.lastVaccinationDate) %>
                      </p>
                      <p class="text-gray-900 dark:text-white">
                        Next: <%= helpers.formatDate(animal.vaccinationSummary?.nextVaccinationDate) %>
                      </p>
                      <p class="text-gray-900 dark:text-white">
                        Total: <%= animal.vaccinationSummary?.totalVaccinations || 0 %> vaccines
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Medical History -->
              <% if (animal.medicalHistory && animal.medicalHistory.length > 0) { %>
                <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Medical History</h4>
                  <div class="space-y-3">
                    <% animal.medicalHistory.slice(0, 3).forEach(record => { %>
                      <div class="p-4 rounded-lg border border-gray-200 dark:border-gray-700">
                        <div class="flex justify-between items-start">
                          <div>
                            <p class="font-medium text-gray-900 dark:text-white"><%= record.condition %></p>
                            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1"><%= record.treatment %></p>
                          </div>
                          <span class="px-2 py-1 text-xs rounded-full <%= record.resolved ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300' %>">
