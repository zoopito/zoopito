<% layout("layouts/boilerplate") %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 px-4 py-6 sm:px-6 lg:px-8">

  <!-- Header with Actions -->
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-8 gap-4">
      <!-- Page Title -->
      <div class="flex-1">
        <div class="flex items-center gap-3">
          <a href="/admin/animals" class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-shadow">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          </a>
          <div>
            <div class="flex items-center gap-2 flex-wrap">
              <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
                Animal Details
              </h1>
              <span class="px-3 py-1 text-xs font-bold rounded-full bg-gradient-to-r from-blue-500 to-purple-500 text-white">
                ID: <%= animal.uniqueAnimalId %>
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-400 mt-1">
              Complete profile for <span class="font-semibold text-gray-900 dark:text-white"><%= animal.name || "Unnamed" %></span>
            </p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-2">
        <% if (animal.isActive) { %>
          <a href="/animal/<%= animal._id %>/edit" 
             class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all transform hover:scale-105 shadow-lg shadow-blue-500/25">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Animal
          </a>
          <form action="/animal/<%= animal._id %>/deactivate" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to deactivate this animal?')">
            <button type="submit" 
                    class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-yellow-500 to-orange-500 text-white font-medium rounded-xl hover:from-yellow-600 hover:to-orange-600 transition-all transform hover:scale-105 shadow-lg shadow-yellow-500/25">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Deactivate
            </button>
          </form>
        <% } else { %>
          <form action="/animal/<%= animal._id %>/activate" method="POST" class="inline">
            <button type="submit" 
                    class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-medium rounded-xl hover:from-green-600 hover:to-emerald-600 transition-all transform hover:scale-105 shadow-lg shadow-green-500/25">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
              </svg>
              Activate
            </button>
          </form>
        <% } %>
        
        <div class="relative group">
          <button type="button" 
                  class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium rounded-xl hover:from-purple-600 hover:to-pink-600 transition-all transform hover:scale-105 shadow-lg shadow-purple-500/25">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
            </svg>
            More Actions
          </button>
          <div class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-xl shadow-2xl border border-gray-100 dark:border-gray-700 z-10 invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-200">
            <div class="py-1">
              <a href="/animal/<%= animal._id %>/vaccinations" 
                 class="flex items-center gap-2 px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                View Vaccinations
              </a>
              <a href="/animal/<%= animal._id %>/photos" 
                 class="flex items-center gap-2 px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Manage Photos
              </a>
              <a href="/animal/<%= animal._id %>/health" 
                 class="flex items-center gap-2 px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Health Records
              </a>
              <form action="/animal/<%= animal._id %>/delete" method="POST" 
                    onsubmit="return confirm('âš ï¸ WARNING: This will permanently delete this animal and all associated data. This action cannot be undone. Are you sure?')">
                <button type="submit" 
                        class="flex items-center gap-2 w-full text-left px-4 py-3 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  Delete Permanently
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <!-- Left Column: Photos & Basic Info -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Photo Gallery -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Photo Documentation
            </h3>
            <a href="/animal/<%= animal._id %>/photos/upload" 
               class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Add Photos
            </a>
          </div>

          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <% const sides = [
              { name: 'front', label: 'Front View', icon: 'ðŸ‘ï¸' },
              { name: 'left', label: 'Left Side', icon: 'â¬…ï¸' },
              { name: 'right', label: 'Right Side', icon: 'âž¡ï¸' },
              { name: 'back', label: 'Back View', icon: 'ðŸ“‹' }
            ]; %>
            
            <% sides.forEach(side => { %>
              <div class="group relative bg-gray-50 dark:bg-gray-700/50 rounded-xl overflow-hidden border-2 border-gray-200 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 transition-all duration-300">
                <% if (animal.photos[side.name]?.url) { %>
                  <img src="<%= animal.photos[side.name].url %>" 
                       alt="<%= side.label %>" 
                       class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-110">
                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300"></div>
                  <a href="<%= animal.photos[side.name].url %>" 
                     target="_blank" 
                     class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="bg-white/90 dark:bg-gray-800/90 p-3 rounded-full shadow-lg">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m0 0l3-3m-3 3l-3-3"/>
                      </svg>
                    </div>
                  </a>
                <% } else { %>
                  <div class="w-full h-48 flex flex-col items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800">
                    <span class="text-3xl mb-2"><%= side.icon %></span>
                    <p class="text-sm text-gray-500 dark:text-gray-400 text-center px-2"><%= side.label %></p>
                    <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">No photo</p>
                  </div>
                <% } %>
                
                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-3">
                  <p class="text-white text-sm font-medium capitalize"><%= side.name %> View</p>
                  <% if (animal.photos[side.name]?.uploadedAt) { %>
                    <p class="text-white/80 text-xs">Uploaded <%= new Date(animal.photos[side.name].uploadedAt).toLocaleDateString() %></p>
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>

          <% if (animal.photos) { %>
            <div class="mt-4 text-center">
              <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 text-xs font-medium">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <% const photoCount = Object.values(animal.photos).filter(photo => photo?.url).length; %>
                <%= photoCount %> out of 4 photos uploaded
              </span>
              <% if (photoCount === 4) { %>
                <span class="ml-2 inline-flex items-center gap-1 px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-xs font-medium">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                  AI Ready
                </span>
              <% } %>
            </div>
          <% } %>
        </div>

        <!-- Animal Information Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Basic Info Card -->
          <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              Basic Information
            </h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Name</span>
                <span class="font-semibold text-gray-900 dark:text-white"><%= animal.name || "Unnamed" %></span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Type</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  <%= animal.animalType %>
                  <% if (animal.breed) { %>
                    <span class="text-gray-500 dark:text-gray-400 ml-1">(<%= animal.breed %>)</span>
                  <% } %>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Gender</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  <%= animal.gender || "Unknown" %>
                  <% if (animal.gender === 'Female') { %>
                    <span class="text-pink-500 ml-1">â™€</span>
                  <% } else if (animal.gender === 'Male') { %>
                    <span class="text-blue-500 ml-1">â™‚</span>
                  <% } %>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Age</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  <% if (animal.age?.value) { %>
                    <%= animal.age.value %> <%= animal.age.unit %>
                  <% } else { %>
                    N/A
                  <% } %>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Tag Number</span>
                <span class="font-semibold text-gray-900 dark:text-white"><%= animal.tagNumber || "N/A" %></span>
              </div>
            </div>
          </div>

          <!-- Health & Status Card -->
          <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Health & Status
            </h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Health Status</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  <% const healthColors = {
                    'Healthy': 'text-green-600 bg-green-100 dark:bg-green-900/30',
                    'Sick': 'text-red-600 bg-red-100 dark:bg-red-900/30',
                    'Under Treatment': 'text-yellow-600 bg-yellow-100 dark:bg-yellow-900/30',
                    'Recovered': 'text-blue-600 bg-blue-100 dark:bg-blue-900/30'
                  }; %>
                  <span class="px-3 py-1 rounded-full text-xs font-medium <%= healthColors[animal.healthStatus] || 'text-gray-600 bg-gray-100' %>">
                    <%= animal.healthStatus %>
                  </span>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Account Status</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  <% if (animal.isActive) { %>
                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                      <span class="inline-block w-2 h-2 rounded-full bg-green-500 mr-1 animate-pulse"></span>
                      Active
                    </span>
                  <% } else { %>
                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">
                      <span class="inline-block w-2 h-2 rounded-full bg-red-500 mr-1"></span>
                      Inactive
                    </span>
                  <% } %>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Registration Date</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  <%= animal.createdAt ? new Date(animal.createdAt).toLocaleDateString() : "N/A" %>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 dark:text-gray-400">Last Updated</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  <%= animal.updatedAt ? new Date(animal.updatedAt).toLocaleDateString() : "N/A" %>
                </span>
              </div>
              <div class="pt-3 border-t border-gray-100 dark:border-gray-700">
                <a href="/animal/<%= animal._id %>/health" 
                   class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  View Health History
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Lactation Information (if applicable) -->
        <% if (animal.lactationStatus?.isLactating || animal.lactationStatus?.lastCalvingDate) { %>
          <div class="bg-gradient-to-r from-pink-50 to-rose-50 dark:from-pink-900/20 dark:to-rose-900/20 rounded-2xl shadow-xl border border-pink-100 dark:border-pink-900/30 p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white flex items-center gap-2">
                <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4 4 0 003 15z"/>
                </svg>
                Lactation Information
              </h3>
              <span class="px-3 py-1 rounded-full text-xs font-medium bg-pink-100 dark:bg-pink-900/30 text-pink-800 dark:text-pink-300">
                Dairy Animal
              </span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="text-center">
                <div class="text-2xl font-bold text-pink-600 dark:text-pink-400 mb-1">
                  <%= animal.lactationStatus.isLactating ? "Yes" : "No" %>
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Currently Lactating</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-gray-900 dark:text-white mb-1">
                  <% if (animal.lactationStatus.lastCalvingDate) { %>
                    <%= new Date(animal.lactationStatus.lastCalvingDate).toLocaleDateString() %>
                  <% } else { %>
                    N/A
                  <% } %>
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Last Calving</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-gray-900 dark:text-white mb-1">
                  <% if (animal.lactationStatus.dailyYield) { %>
                    <%= animal.lactationStatus.dailyYield %> <%= animal.lactationStatus.yieldUnit || "L" %>
                  <% } else { %>
                    N/A
                  <% } %>
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Daily Yield</div>
              </div>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Right Column: Farmer Info & Actions -->
      <div class="space-y-6">
        <!-- Farmer Information Card -->
        <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-100/50 dark:border-gray-700/50 p-6">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            Farmer Information
          </h3>
          
          <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 rounded-full bg-gradient-to-r from-green-400 to-emerald-500 flex items-center justify-center text-white text-xl font-bold">
                <%= animal.farmer?.name?.charAt(0).toUpperCase() || "F" %>
