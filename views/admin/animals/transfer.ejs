<% layout("layouts/boilerplate") %>

<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <a href="/<%= currUser.role.toLowerCase() %>/animals/<%= animal._id %>" class="text-blue-600 hover:underline">‚Üê Back to Animal</a>
    <h1 class="text-2xl font-bold text-gray-900 mt-2">Transfer Animal Ownership</h1>
    <p class="text-gray-600">Transfer <%= animal.name || animal.tagNumber %> to another farmer</p>
  </div>

  <div class="bg-white rounded-lg shadow p-6 max-w-2xl mx-auto">
    <form action="/<%= currUser.role.toLowerCase() %>/animal/<%= animal._id %>/transfer" method="POST">
      
      <!-- Current Owner Info -->
      <div class="mb-6 p-4 bg-blue-50 rounded-lg">
        <h3 class="font-semibold text-gray-900 mb-2">Current Owner</h3>
        <p class="text-gray-700"><%= animal.currentOwner?.name || animal.farmer?.name %></p>
        <p class="text-sm text-gray-600">Farmer ID: <%= animal.currentOwner?.uniqueFarmerId || animal.farmer?.uniqueFarmerId %></p>
      </div>

      <!-- Select New Farmer -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Transfer To *</label>
        <select name="newFarmerId" required class="w-full border rounded px-3 py-2">
          <option value="">Select New Farmer</option>
          <% farmers.forEach(farmer => { %>
            <option value="<%= farmer._id %>"><%= farmer.name %> (<%= farmer.uniqueFarmerId %>)</option>
          <% }) %>
        </select>
      </div>

      <!-- Transfer Details -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Transfer Date</label>
        <input type="date" name="transferDate" class="w-full border rounded px-3 py-2" value="<%= new Date().toISOString().split('T')[0] %>">
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Reason for Transfer *</label>
        <select name="transferReason" required class="w-full border rounded px-3 py-2">
          <option value="">Select Reason</option>
          <option value="Sale">Sale</option>
          <option value="Gift">Gift</option>
          <option value="Inheritance">Inheritance</option>
          <option value="Loan">Loan</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">Additional Notes</label>
        <textarea name="notes" rows="3" class="w-full border rounded px-3 py-2" placeholder="Any additional information about the transfer..."></textarea>
      </div>

      <!-- Warning Message -->
      <div class="mb-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
        <div class="flex">
          <svg class="h-5 w-5 text-yellow-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <p class="text-sm text-yellow-700">
            <strong>Important:</strong> This action cannot be undone. The animal's ownership history will be updated.
          </p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-end gap-3">
        <a href="/<%= currUser.role.toLowerCase() %>/animals/<%= animal._id %>" class="px-4 py-2 border rounded text-gray-700 hover:bg-gray-50">
          Cancel
        </a>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
          Confirm Transfer
        </button>
      </div>
    </form>
  </div>
</div>