<% layout("layouts/boilerplate") %>

<div class="max-w-6xl mx-auto px-4 py-6 space-y-6">

  <!-- HEADER -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">
        Paravet Details
      </h1>
      <p class="text-sm text-gray-500">
        Complete profile and assignments
      </p>
    </div>

    <div class="flex gap-2">
      <a href="/admin/paravets"
        class="px-4 py-2 text-sm rounded-md bg-gray-200 hover:bg-gray-300">
        ← Back
      </a>
    </div>
  </div>

  <!-- MAIN GRID -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- LEFT CARD -->
    <div class="bg-white rounded-xl shadow border p-5 space-y-4">

      <h2 class="font-semibold text-gray-700 border-b pb-2">
        Basic Information
      </h2>

      <div class="space-y-2 text-sm">
        <p><span class="font-medium">Name:</span> <%= paravet.user?.name %></p>
        <p><span class="font-medium">Email:</span> <%= paravet.user?.email %></p>
        <p><span class="font-medium">Mobile:</span> <%= paravet.user?.mobile %></p>
        <p>
          <span class="font-medium">Status:</span>
          <% if (paravet.isActive) { %>
            <span class="px-2 py-1 text-xs bg-green-100 text-green-700 rounded">
              Active
            </span>
          <% } else { %>
            <span class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded">
              Inactive
            </span>
          <% } %>
        </p>
      </div>
    </div>

    <!-- MIDDLE CARD -->
    <div class="bg-white rounded-xl shadow border p-5 space-y-4">

      <h2 class="font-semibold text-gray-700 border-b pb-2">
        Professional Details
      </h2>

      <div class="space-y-2 text-sm">
        <p>
          <span class="font-medium">Qualification:</span>
          <%= paravet.qualification %>
        </p>

        <p>
          <span class="font-medium">License No:</span>
          <%= paravet.licenseNumber || "—" %>
        </p>

        <p>
          <span class="font-medium">Rating:</span>
          <%= paravet.rating %> / 5
        </p>

        <p>
          <span class="font-medium">Services Completed:</span>
          <%= paravet.totalServicesCompleted %>
        </p>
      </div>
    </div>

    <!-- RIGHT CARD -->
    <div class="bg-white rounded-xl shadow border p-5 space-y-4">

      <h2 class="font-semibold text-gray-700 border-b pb-2">
        Assigned Areas
      </h2>

      <% if (paravet.assignedAreas.length === 0) { %>
        <p class="text-sm text-gray-500">No areas assigned</p>
      <% } %>

      <% paravet.assignedAreas.forEach(area => { %>
        <div class="text-sm bg-gray-50 rounded-md p-3">
          <p><%= area.village || "-" %>, <%= area.taluka || "-" %></p>
          <p class="text-gray-500">
            <%= area.district || "-" %>, <%= area.state || "-" %>
          </p>
        </div>
      <% }) %>

    </div>
  </div>

  <!-- ASSIGNED FARMERS -->
  <div class="bg-white rounded-xl shadow border p-5">

    <h2 class="font-semibold text-gray-700 mb-4">
      Assigned Farmers (<%= paravet.assignedFarmers.length %>)
    </h2>

    <% if (paravet.assignedFarmers.length === 0) { %>
      <p class="text-sm text-gray-500">No farmers assigned yet.</p>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-3 py-2 text-left">Farmer ID</th>
              <th class="px-3 py-2 text-left">Name</th>
              <th class="px-3 py-2 text-left">Mobile</th>
            </tr>
          </thead>
          <tbody class="divide-y">
            <% paravet.assignedFarmers.forEach(farmer => { %>
              <tr>
                <td class="px-3 py-2">
                  <%= farmer.uniqueFarmerId || "-" %>
                </td>
                <td class="px-3 py-2">
                  <%= farmer.name %>
                </td>
                <td class="px-3 py-2">
                  <%= farmer.mobileNumber %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

  </div>

</div>
